@model AMS.Models.ViewModels.AddBatchViewModel
@{
    ViewData["Title"] = "Add New Batch";
}

<div class="mb-6">
    <h2 class="text-title-md2 font-bold text-gray-900 dark:text-white">
        Add New Batch
    </h2>
</div>

<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Batch Information</h3>
    </div>

    <!-- Alert Container -->
    <div id="alertContainer" class="px-6 pt-4"></div>

    <form class="ajax-form" method="post" asp-action="AddBatch" data-redirect-url="@Url.Action("Batches", "Batch")">
        @Html.AntiForgeryToken()

        <div class="space-y-6 p-6">
            <!-- Batch Name -->
            <div>
                <label asp-for="BatchName" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Batch Name<span class="text-error-500">*</span>
                </label>
                <input asp-for="BatchName" type="text" placeholder="e.g., Batch A, Morning Batch, CS-2024"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="BatchName" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Year -->
            <div>
                <label asp-for="Year" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Year<span class="text-error-500">*</span>
                </label>
                <input asp-for="Year" type="number" placeholder="2024" min="2000" max="2100"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="Year" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Active Status -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Status
                </label>
                <div class="flex items-center">
                    <input asp-for="IsActive" type="checkbox"
                           class="h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900" />
                    <label asp-for="IsActive" class="ml-2 text-sm text-gray-700 dark:text-gray-400">
                        Active
                    </label>
                </div>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                    Only active batches will be available for student enrollment
                </p>
            </div>
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-end gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4 dark:border-gray-800 dark:bg-gray-800/50">
            <a asp-action="Batches"
               class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white px-5 py-2.5 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-400/50 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-300 dark:hover:bg-gray-800">
                Cancel
            </a>
            <button type="submit"
                    class="inline-flex items-center justify-center rounded-lg bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white transition-colors hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500/50">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Batch
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('.ajax-form').on('submit', function (e) {
                e.preventDefault();

                if (!$(this).valid()) {
                    return false;
                }

                var $form = $(this);
                var $submitBtn = $form.find('button[type="submit"]');
                var originalBtnText = $submitBtn.html();

                // Show loading state
                $submitBtn.prop('disabled', true).html(`
                    <svg class="mr-2 h-5 w-5 animate-spin inline" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Processing...
                `);

                // Clear previous alerts
                $('#alertContainer').empty();

                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            var successHtml = `
                                <div class="mb-4 rounded-lg border border-green-500 bg-green-500/10 p-4">
                                    <div class="flex items-start gap-3">
                                        <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                        </svg>
                                        <div>
                                            <h4 class="text-sm font-semibold text-green-700 dark:text-green-400">Success</h4>
                                            <p class="text-sm text-green-600 dark:text-green-500">${response.message}</p>
                                        </div>
                                    </div>
                                </div>`;
                            $('#alertContainer').html(successHtml);

                            // Clear form
                            $form[0].reset();

                            // Scroll to top
                            $('html, body').animate({ scrollTop: 0 }, 300);

                            // Redirect after delay
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Batches", "Batch")';
                            }, 1500);
                        }
                    },
                    error: function (xhr) {
                        var errorMessage = 'An error occurred while processing your request.';

                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        }

                        // Handle validation errors
                        if (xhr.responseJSON && xhr.responseJSON.errors) {
                            var errors = xhr.responseJSON.errors;
                            for (var field in errors) {
                                if (errors.hasOwnProperty(field)) {
                                    var $input = $('input[name="' + field + '"], select[name="' + field + '"], textarea[name="' + field + '"]');
                                    var $errorSpan = $input.siblings('span[data-valmsg-for]');
                                    if ($errorSpan.length && errors[field].length > 0) {
                                        $errorSpan.text(errors[field][0]);
                                        $input.addClass('border-red-500');
                                    }
                                }
                            }
                        }

                        var errorHtml = `
                            <div class="mb-4 rounded-lg border border-red-500 bg-red-500/10 p-4">
                                <div class="flex items-start gap-3">
                                    <svg class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                    </svg>
                                    <div>
                                        <h4 class="text-sm font-semibold text-red-700 dark:text-red-400">Error</h4>
                                        <p class="text-sm text-red-600 dark:text-red-500">${errorMessage}</p>
                                    </div>
                                </div>
                            </div>`;
                        $('#alertContainer').html(errorHtml);

                        // Scroll to top
                        $('html, body').animate({ scrollTop: 0 }, 300);
                    },
                    complete: function () {
                        $submitBtn.prop('disabled', false).html(originalBtnText);
                    }
                });
            });

            // Clear validation errors on input
            $('input, select, textarea').on('input change', function () {
                var $input = $(this);
                var $errorSpan = $input.siblings('span[data-valmsg-for]');
                if ($errorSpan.length) {
                    $errorSpan.text('');
                }
                $input.removeClass('border-red-500');
            });
        });
    </script>
}
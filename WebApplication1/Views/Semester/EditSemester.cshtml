@model AMS.Models.ViewModels.AddSemesterViewModel
@{
    ViewData["Title"] = "Edit Semester";
}

<!-- Breadcrumb -->
<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <h2 class="text-title-md2 font-bold text-gray-900 dark:text-white">
        Edit Semester
    </h2>
    <nav>
        <ol class="flex items-center gap-2">
            <li>
                <a asp-controller="Home" asp-action="Index" class="text-sm font-medium text-gray-500 hover:text-brand-500 dark:text-gray-400">Home</a>
            </li>
            <li class="text-sm font-medium text-gray-500 dark:text-gray-400">/</li>
            <li>
                <a asp-controller="Semester" asp-action="Semesters" class="text-sm font-medium text-gray-500 hover:text-brand-500 dark:text-gray-400">Semesters</a>
            </li>
            <li class="text-sm font-medium text-gray-500 dark:text-gray-400">/</li>
            <li class="text-sm font-medium text-brand-500">Edit</li>
        </ol>
    </nav>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Semester Information</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Update the semester details</p>
    </div>

    <!-- Alert Container -->
    <div id="alertContainer" class="px-6 pt-4"></div>

    <!-- Form -->
    <form class="ajax-form" method="post" asp-action="EditSemester" asp-route-id="@ViewBag.SemesterId" data-redirect-url="@Url.Action("Semesters", "Semester")" data-clear-on-success="false">
        @Html.AntiForgeryToken()

        <div class="space-y-6 p-6">
            <!-- Semester Name -->
            <div>
                <label asp-for="SemesterName" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Semester Name<span class="text-error-500">*</span>
                </label>
                <input asp-for="SemesterName"
                       type="text"
                       placeholder="e.g., Fall 2024, Spring 2025"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="SemesterName" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Year -->
            <div>
                <label asp-for="Year" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Year<span class="text-error-500">*</span>
                </label>
                <input asp-for="Year"
                       type="number"
                       placeholder="2024"
                       min="2000"
                       max="2100"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="Year" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Start Date & End Date -->
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                <div>
                    <label asp-for="StartDate" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                        Start Date<span class="text-error-500">*</span>
                    </label>
                    <input asp-for="StartDate"
                           type="date"
                           class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white" />
                    <span asp-validation-for="StartDate" class="mt-1 block text-sm text-error-500"></span>
                </div>

                <div>
                    <label asp-for="EndDate" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                        End Date<span class="text-error-500">*</span>
                    </label>
                    <input asp-for="EndDate"
                           type="date"
                           class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white" />
                    <span asp-validation-for="EndDate" class="mt-1 block text-sm text-error-500"></span>
                </div>
            </div>

            <!-- Active Status -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Status
                </label>
                <div class="flex items-center">
                    <input asp-for="IsActive"
                           type="checkbox"
                           class="h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900" />
                    <label asp-for="IsActive" class="ml-2 text-sm text-gray-700 dark:text-gray-400">
                        Active
                    </label>
                </div>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                    Only active semesters will be available for course assignments and enrollments
                </p>
            </div>
        </div>

        <!-- Card Footer -->
        <div class="flex items-center justify-end gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4 dark:border-gray-800 dark:bg-gray-800/50">
            <a asp-controller="Semester" asp-action="Semesters"
               class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white px-5 py-2.5 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-400/50 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-300 dark:hover:bg-gray-800">
                Cancel
            </a>
            <button type="submit"
                    class="inline-flex items-center justify-center rounded-lg bg-brand-500 px-5 py-2.5 text-sm font-medium text-white transition-colors hover:bg-brand-600 focus:outline-none focus:ring-2 focus:ring-brand-500/50">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Update Semester
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/forms-ajax-handler.js"></script>
}


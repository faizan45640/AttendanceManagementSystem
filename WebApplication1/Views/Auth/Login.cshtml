@model AMS.Models.ViewModels.LoginViewModel
@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "Sign In";
}

<div class="relative flex flex-col justify-center w-full h-screen dark:bg-gray-900 sm:p-0 lg:flex-row">
    <!-- Form -->
    <div class="flex flex-col flex-1 w-full lg:w-1/2">
        <div class="flex flex-col justify-center flex-1 w-full max-w-md mx-auto">
            <div>
                <div class="mb-5 sm:mb-8">
                    <h1 class="mb-2 font-semibold text-gray-800 text-title-sm dark:text-white/90 sm:text-title-md">
                        Sign In to AMS
                    </h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        Enter your email and password to access your account
                    </p>
                </div>
                
                @if (ViewBag.Error != null)
                {
                    <div class="mb-4 p-4 rounded-lg border border-error-500 bg-error-500/10">
                        <p class="text-sm text-error-500">@ViewBag.Error</p>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="mb-4 p-4 rounded-lg border border-error-500 bg-error-500/10">
                        <p class="text-sm text-error-500">@TempData["Error"]</p>
                    </div>
                }
                
                <form method="post">
                    <div class="space-y-5">
                        <!-- Email -->
                        <div>
                            <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                Email<span class="text-error-500">*</span>
                            </label>
                            <input type="email"
                                   asp-for="Email"
                                   placeholder="info@example.com"
                                   class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30 dark:focus:border-brand-800" />
                            <span asp-validation-for="Email" class="text-sm text-error-500 mt-1"></span>
                        </div>
                        
                        <!-- Password -->
                        <div>
                            <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                Password<span class="text-error-500">*</span>
                            </label>
                            <div x-data="{ showPassword: false }" class="relative">
                                <input :type="showPassword ? 'text' : 'password'"
                                       asp-for="Password"
                                       placeholder="Enter your password"
                                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent py-2.5 pl-4 pr-11 text-sm text-gray-800 shadow-theme-xs placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30 dark:focus:border-brand-800" />
                                <span @@click="showPassword = !showPassword"
                                      class="absolute z-30 text-gray-500 -translate-y-1/2 cursor-pointer right-4 top-1/2 dark:text-gray-400">
                                    <svg x-show="!showPassword" class="fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" clip-rule="evenodd" d="M10.0002 13.8619C7.23361 13.8619 4.86803 12.1372 3.92328 9.70241C4.86804 7.26761 7.23361 5.54297 10.0002 5.54297C12.7667 5.54297 15.1323 7.26762 16.0771 9.70243C15.1323 12.1372 12.7667 13.8619 10.0002 13.8619Z" fill="#98A2B3" />
                                    </svg>
                                    <svg x-show="showPassword" class="fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" clip-rule="evenodd" d="M3.28033 2.21967C2.98744 1.92678 2.51256 1.92678 2.21967 2.21967C1.92678 2.51256 1.92678 2.98744 2.21967 3.28033L16.7197 17.7803C17.0126 18.0732 17.4874 18.0732 17.7803 17.7803C18.0732 17.4874 18.0732 17.0126 17.7803 16.7197L3.28033 2.21967Z" fill="#98A2B3" />
                                    </svg>
                                </span>
                            </div>
                            <span asp-validation-for="Password" class="text-sm text-error-500 mt-1"></span>
                        </div>
                        
                        <!-- Remember Me & Forgot Password -->
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <input type="checkbox" id="remember" class="h-4 w-4 rounded border-gray-300 text-brand-500 focus:ring-brand-500" />
                                <label for="remember" class="ml-2 text-sm text-gray-700 dark:text-gray-400">Remember me</label>
                            </div>
                            <a asp-controller="Auth" asp-action="ForgotPassword" class="text-sm text-brand-500 hover:text-brand-600 dark:text-brand-400">Forgot password?</a>
                        </div>
                        
                        <!-- Submit Button -->
                        <button type="submit"
                                class="inline-flex w-full items-center justify-center gap-3 rounded-lg bg-brand-500 px-7 py-3 text-sm font-medium text-white transition-colors hover:bg-brand-600 focus:outline-hidden focus:ring-3 focus:ring-brand-500/50">
                            Sign In
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Image Side (optional) -->
    <div class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-brand-500 to-brand-600 items-center justify-center p-10">
        <div class="text-center text-white">
            <h2 class="text-4xl font-bold mb-4">Welcome to AMS</h2>
            <p class="text-lg opacity-90">Attendance Management System</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

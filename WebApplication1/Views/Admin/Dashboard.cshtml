        // Export to PDF function
        function exportToPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('p', 'mm', 'a4');
            const pageWidth = doc.internal.pageSize.getWidth();
            let y = 20;

            // Title
            doc.setFontSize(20);
            doc.setTextColor(79, 70, 229);
            doc.text('Admin Dashboard Report', pageWidth / 2, y, { align: 'center' });
            y += 10;

            // Date
            doc.setFontSize(10);
            doc.setTextColor(100);
            doc.text('Generated: ' + new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }), pageWidth / 2, y, { align: 'center' });
            y += 15;

            // Summary Statistics
            doc.setFontSize(14);
            doc.setTextColor(0);
            doc.text('Summary Statistics', 14, y);
            y += 8;

            doc.setFontSize(10);
            doc.setTextColor(60);
            const stats = [
                ['Total Students', '@Model.TotalStudents'],
                ['Total Teachers', '@Model.TotalTeachers'],
                ['Total Courses', '@Model.TotalCourses'],
                ['Total Batches', '@Model.TotalBatches'],
                ['Active Semesters', '@Model.ActiveSemesters'],
                ['Overall Attendance Rate', '@Model.OverallAttendanceRate%']
            ];

            stats.forEach((stat, i) => {
                doc.text(stat[0] + ': ' + stat[1], 14, y + (i * 6));
            });
            y += 45;

            // Attendance Distribution
            doc.setFontSize(14);
            doc.setTextColor(0);
            doc.text('Attendance Distribution', 14, y);
            y += 8;

            doc.setFontSize(10);
            doc.setTextColor(60);
            const attendance = [
                ['Present', '@Model.PresentCount'],
                ['Absent', '@Model.AbsentCount'],
                ['Late', '@Model.LateCount'],
                ['Excused', '@Model.ExcusedCount']
            ];

            attendance.forEach((att, i) => {
                doc.text(att[0] + ': ' + att[1], 14, y + (i * 6));
            });

            // Save PDF
            doc.save('admin-dashboard-report.pdf');
        }

        // Export to Excel function
        function exportToExcel() {
            // Create workbook
            const wb = XLSX.utils.book_new();

            // Summary Sheet
            const summaryData = [
                ['Admin Dashboard Report'],
                ['Generated: ' + new Date().toLocaleDateString()],
                [],
                ['Summary Statistics'],
                ['Metric', 'Value'],
                ['Total Students', @Model.TotalStudents],
                ['Total Teachers', @Model.TotalTeachers],
                ['Total Courses', @Model.TotalCourses],
                ['Total Batches', @Model.TotalBatches],
                ['Active Semesters', @Model.ActiveSemesters],
                ['Overall Attendance Rate', '@Model.OverallAttendanceRate%'],
                [],
                ['Attendance Distribution'],
                ['Status', 'Count'],
                ['Present', @Model.PresentCount],
                ['Absent', @Model.AbsentCount],
                ['Late', @Model.LateCount],
                ['Excused', @Model.ExcusedCount]
            ];
            const summarySheet = XLSX.utils.aoa_to_sheet(summaryData);
            XLSX.utils.book_append_sheet(wb, summarySheet, 'Summary');

            // Save file
            XLSX.writeFile(wb, 'admin-dashboard-report.xlsx');
        }

        // Print Full Report function
        function printFullReport() {
            // Scroll to top first
            window.scrollTo(0, 0);

            // Wait for any lazy-loaded content and charts to render
            setTimeout(() => {
                // Expand any collapsed sections
                const hiddenElements = document.querySelectorAll('.overflow-hidden, .overflow-y-auto');
                hiddenElements.forEach(el => {
                    el.style.overflow = 'visible';
                    el.style.maxHeight = 'none';
                });

                // Trigger print
                window.print();

                // Restore original styles after print
                setTimeout(() => {
                    hiddenElements.forEach(el => {
                        el.style.overflow = '';
                        el.style.maxHeight = '';
                    });
                }, 1000);
            }, 500);
        }
    </script>


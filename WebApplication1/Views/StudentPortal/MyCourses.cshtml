@section Scripts {
    <script>
function enrollmentApp() {
    return {
        loading: true,
        refreshing: false,
        data: {},
        activeTab: 'enrolled',
        searchQuery: '',
        selectedSemester: '',
        showModal: false,
        modalAction: '',
        modalTitle: '',
        modalMessage: '',
        actionLoading: false,
        toast: { show: false, message: '', type: 'success' },
        currentCourse: null,

        get filteredAvailableCourses() {
            if (!this.data.availableCourses) return [];
            if (!this.searchQuery) return this.data.availableCourses;
            const q = this.searchQuery.toLowerCase();
            return this.data.availableCourses.filter(c => {
                const courseName = (c.courseName || '').toLowerCase();
                const courseCode = (c.courseCode || '').toLowerCase();
                const teacherName = (c.teacherName || '').toLowerCase();
                const batchName = (c.batchName || '').toLowerCase();
                const scheduleText = (c.schedule || []).map(s => {
                    const day = (s.dayName || '').toLowerCase();
                    const start = (s.startTime || '').toLowerCase();
                    const end = (s.endTime || '').toLowerCase();
                    return `${day} ${start} ${end}`;
                }).join(' ');

                return (
                    courseName.includes(q) ||
                    courseCode.includes(q) ||
                    teacherName.includes(q) ||
                    batchName.includes(q) ||
                    scheduleText.includes(q)
                );
            });
        },

        async loadData() {
            this.refreshing = true;
            try {
                const url = '@Url.Action("GetMyCoursesJson")' + (this.selectedSemester ? '?semesterId=' + this.selectedSemester : '');
                const response = await fetch(url);
                const result = await response.json();
                if (result.success) {
                    this.data = result;
                }
            } catch (error) {
                console.error('Error loading data:', error);
                this.showToast('Failed to load data', 'error');
            } finally {
                this.loading = false;
                this.refreshing = false;
            }
        },

        confirmEnroll(course) {
            this.currentCourse = course;
            this.modalAction = 'enroll';
            this.modalTitle = 'Confirm Enrollment';
            this.modalMessage = `Are you sure you want to enroll in "${course.courseName}"?`;
            this.showModal = true;
        },

        confirmUnenroll(course) {
            this.currentCourse = course;
            this.modalAction = 'unenroll';
            this.modalTitle = 'Confirm Unenrollment';
            this.modalMessage = `Are you sure you want to unenroll from "${course.courseName}"?`;
            this.showModal = true;
        },

        async executeAction() {
            this.actionLoading = true;
            try {
                const url = this.modalAction === 'enroll' ? '@Url.Action("EnrollInCourse")' : '@Url.Action("UnenrollFromCourse")';
                const formData = new FormData();
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                if (this.modalAction === 'enroll') {
                    formData.append('courseId', this.currentCourse.courseId);
                    formData.append('semesterId', this.currentCourse.semesterId);
                    formData.append('batchId', this.currentCourse.batchId);
                } else {
                    formData.append('enrollmentId', this.currentCourse.enrollmentId);
                }

                const response = await fetch(url, { method: 'POST', body: formData });
                const result = await response.json();

                this.showModal = false;
                this.showToast(result.message, result.success ? 'success' : 'error');

                if (result.success) {
                    // Reload data without page refresh
                    await this.loadData();
                }
            } catch (error) {
                this.showToast('An error occurred. Please try again.', 'error');
            } finally {
                this.actionLoading = false;
            }
        },

        showToast(message, type) {
            this.toast = { show: true, message, type };
            setTimeout(() => { this.toast.show = false; }, 4000);
        }
    }
}
    </script>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function toggleFilter() {
            const panel = document.getElementById('filterPanel');
            const icon = document.getElementById('filterIcon');

            if (panel.classList.contains('hidden')) {
                panel.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            } else {
                panel.classList.add('hidden');
                icon.style.transform = 'rotate(0deg)';
            }
        }

        function clearFilters() {
            window.location.href = '@Url.Action("Teachers")';
        }

        function openViewModal(teacherId, username, email, firstName, lastName, courses, status) {
            const fullName = `${firstName} ${lastName}`;

            document.getElementById('viewFullName').textContent = fullName;
            document.getElementById('viewUsername').textContent = username;
            document.getElementById('viewEmail').textContent = email;
            document.getElementById('viewCourses').textContent = courses;

            const statusElement = document.getElementById('viewStatus');
            if (status === 'Active') {
                statusElement.className = 'inline-block text-sm font-semibold text-success-600 dark:text-success-500';
                statusElement.textContent = '● Active';
            } else {
                statusElement.className = 'inline-block text-sm font-semibold text-error-600 dark:text-error-500';
                statusElement.textContent = '● Inactive';
            }

            document.getElementById('viewModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeViewModal() {
            document.getElementById('viewModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function confirmDelete(teacherId, username, courseCount) {
            document.getElementById('deleteTeacherId').value = teacherId;
            document.getElementById('deleteUsername').textContent = username;

            const warningMessage = document.getElementById('warningMessage');
            if (courseCount > 0) {
                warningMessage.textContent = `This teacher is assigned to ${courseCount} course(s).`;
                warningMessage.classList.remove('hidden');
            } else {
                warningMessage.classList.add('hidden');
            }

            document.getElementById('deleteModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                closeViewModal();
                closeDeleteModal();
            }
        });

        @if (activeFilters > 0)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                toggleFilter();
            });
            </text>
        }
    </script>
}
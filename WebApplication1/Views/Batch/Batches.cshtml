@section Scripts {
    <script>
        // View Modal Functions
        function openViewModal(batchId, batchName, year, studentCount, status) {
            document.getElementById('viewBatchName').textContent = batchName || 'N/A';
            document.getElementById('viewYear').textContent = year || 'N/A';
            document.getElementById('viewStudentCount').textContent = studentCount;

            const statusElement = document.getElementById('viewStatus');
            if (status === 'Active') {
                statusElement.className = 'inline-block text-sm font-semibold text-success-600 dark:text-success-500';
                statusElement.textContent = '● Active';
            } else {
                statusElement.className = 'inline-block text-sm font-semibold text-error-600 dark:text-error-500';
                statusElement.textContent = '● Inactive';
            }

            document.getElementById('viewModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeViewModal() {
            document.getElementById('viewModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Delete Modal Functions
        function confirmDelete(batchId, batchName, studentCount) {
            document.getElementById('deleteBatchId').value = batchId;
            document.getElementById('deleteBatchName').textContent = batchName;

            const warningMessage = document.getElementById('warningMessage');
            if (studentCount > 0) {
                warningMessage.textContent = `This batch has ${studentCount} student(s) enrolled.`;
                warningMessage.classList.remove('hidden');
            } else {
                warningMessage.classList.add('hidden');
            }

            document.getElementById('deleteModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Close modals on escape key
        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                closeViewModal();
                closeDeleteModal();
            }
        });
    </script>
}
@model AMS.Models.ViewModels.EditTimetableViewModel
@{
    ViewData["Title"] = "Edit Timetable";
    var days = Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>().OrderBy(d => d == DayOfWeek.Sunday ? 7 : (int)d); // Start Monday
}
@if (TempData["success"] != null)
{
    <div class="mb-4 rounded-lg bg-success-50 p-4 text-sm text-success-800 dark:bg-gray-800 dark:text-success-400" role="alert">
        <span class="font-medium">Success!</span> @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="mb-4 rounded-lg bg-error-50 p-4 text-sm text-error-800 dark:bg-gray-800 dark:text-error-400" role="alert">
        <span class="font-medium">Error!</span> @TempData["error"]
    </div>
}

<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Left Column: Info & Add Slot -->
    <div class="space-y-6 lg:col-span-1">
        <!-- Info Card -->
        <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
            <h3 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white/90">
                Timetable Details
            </h3>
            <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-500 dark:text-gray-400">Batch:</span>
                    <span class="font-medium text-gray-800 dark:text-white/90">@Model.BatchName</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-500 dark:text-gray-400">Semester:</span>
                    <span class="font-medium text-gray-800 dark:text-white/90">@Model.SemesterName</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-500 dark:text-gray-400">Status:</span>
                    <span class="@(Model.IsActive ? "text-success-500" : "text-error-500") font-medium">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-800">
                <a asp-action="Index" class="text-sm text-brand-500 hover:underline">Back to List</a>
            </div>
        </div>

        <!-- Add Slot Form -->
        <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
            <h3 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white/90">
                Add Slot
            </h3>
            <form asp-action="AddSlot">
                <input type="hidden" asp-for="NewSlot.TimetableId" />
                <div class="space-y-4">
                    <div>
                        <label asp-for="NewSlot.DayOfWeek" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                            Day
                        </label>
                        <select asp-for="NewSlot.DayOfWeek" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500">
                            @foreach (var day in days)
                            {
                                <option value="@((int)day)">@day</option>
                            }
                        </select>
                    </div>

                    <div>
                        <label asp-for="NewSlot.CourseAssignmentId" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                            Course & Teacher
                        </label>
                        <select asp-for="NewSlot.CourseAssignmentId" asp-items="Model.CourseAssignments" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500">
                            <option value="">Select Course</option>
                        </select>
                        <span asp-validation-for="NewSlot.CourseAssignmentId" class="mt-1 text-xs text-error-500"></span>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label asp-for="NewSlot.StartTime" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                Start Time
                            </label>
                            <input asp-for="NewSlot.StartTime" type="time" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500" />
                            <span asp-validation-for="NewSlot.StartTime" class="mt-1 text-xs text-error-500"></span>
                        </div>
                        <div>
                            <label asp-for="NewSlot.EndTime" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                End Time
                            </label>
                            <input asp-for="NewSlot.EndTime" type="time" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500" />
                            <span asp-validation-for="NewSlot.EndTime" class="mt-1 text-xs text-error-500"></span>
                        </div>
                    </div>

                    <button type="submit" class="w-full rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white hover:bg-brand-600 active:bg-brand-700">
                        Add Slot
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Right Column: Timetable Display -->
    <div class="lg:col-span-2">
        <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] overflow-x-auto">
            <h4 class="mb-4 text-base font-semibold text-gray-800 dark:text-white/90">
                Weekly Schedule
            </h4>
            <table class="w-full min-w-[800px] border-collapse text-left table-fixed">
                <thead>
                    <tr class="border-b border-gray-200 dark:border-gray-800">
                        @foreach (var day in days)
                        {
                            <th class="px-2 py-3 text-sm font-medium text-gray-500 dark:text-gray-400 text-center border-r border-gray-100 dark:border-gray-800 last:border-0">
                                @day
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var day in days)
                        {
                            var daySlots = Model.Slots.Where(s => s.DayOfWeek == (int)day).OrderBy(s => s.StartTime).ToList();
                            <td class="px-2 py-3 align-top border-r border-gray-100 dark:border-gray-800 last:border-0 h-full">
                                <div class="flex flex-col gap-2">
                                    @foreach (var slot in daySlots)
                                    {
                                        <div class="relative rounded-lg border border-gray-200 bg-gray-50 p-2 dark:border-gray-700 dark:bg-gray-800/50 group hover:shadow-md transition-shadow">
                                            <div class="text-xs font-semibold text-brand-500 mb-1">
                                                @slot.StartTime.ToString("HH:mm") - @slot.EndTime.ToString("HH:mm")
                                            </div>
                                            <div class="text-sm font-medium text-gray-800 dark:text-white/90 leading-tight">
                                                @slot.CourseName
                                            </div>
                                            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                @slot.TeacherName
                                            </div>

                                            <!-- Delete Button (Absolute positioned, visible on hover) -->
                                            <form asp-action="DeleteSlot" asp-route-id="@slot.SlotId" method="post" onsubmit="return confirm('Delete this slot?');" class="absolute top-1 right-1">
                                                <button type="submit" class="text-gray-400 hover:text-error-500 bg-white dark:bg-gray-800 rounded-full p-1 shadow-sm transition-colors" title="Delete Slot">
                                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    @if (!daySlots.Any())
                                    {
                                        <div class="text-xs text-gray-400 text-center py-4 border border-dashed border-gray-200 rounded-lg">No classes</div>
                                    }
                                </div>
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

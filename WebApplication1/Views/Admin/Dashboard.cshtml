            print-color-adjust: exact !important;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart.js default configuration for dark mode support
        const isDarkMode = document.documentElement.classList.contains('dark');
        const gridColor = isDarkMode ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.1)';
        const textColor = isDarkMode ? '#9CA3AF' : '#6B7280';

        Chart.defaults.color = textColor;
        Chart.defaults.borderColor = gridColor;

        // Monthly Attendance Trend (Line Chart)
        const monthlyCtx = document.getElementById('monthlyAttendanceChart').getContext('2d');
        new Chart(monthlyCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyLabels)),
                datasets: [{
                    label: 'Attendance Rate (%)',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyAttendanceValues)),
                    borderColor: '#6366F1',
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#6366F1',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        min: 70,
                        max: 100,
                        ticks: { callback: value => value + '%' }
                    }
                }
            }
        });

        // Attendance Status Pie Chart
        const statusCtx = document.getElementById('attendanceStatusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'pie',
            data: {
                labels: ['Present', 'Absent', 'Late', 'Excused'],
                datasets: [{
                    data: [@Model.PresentCount, @Model.AbsentCount, @Model.LateCount, @Model.ExcusedCount],
                    backgroundColor: ['#10B981', '#EF4444', '#F59E0B', '#6366F1'],
                    borderColor: isDarkMode ? '#1F2937' : '#FFFFFF',
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: { usePointStyle: true, padding: 20 }
                    }
                }
            }
        });

        // Weekly Attendance Bar Chart
        const weeklyCtx = document.getElementById('weeklyAttendanceChart').getContext('2d');
        new Chart(weeklyCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.WeeklyLabels)),
                datasets: [{
                    label: 'Attendance Rate (%)',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.WeeklyAttendanceValues)),
                    backgroundColor: [
                        'rgba(99, 102, 241, 0.8)',
                        'rgba(139, 92, 246, 0.8)',
                        'rgba(168, 85, 247, 0.8)',
                        'rgba(192, 132, 252, 0.8)',
                        'rgba(167, 139, 250, 0.8)',
                        'rgba(129, 140, 248, 0.8)'
                    ],
                    borderRadius: 8,
                    borderSkipped: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: { callback: value => value + '%' }
                    }
                }
            }
        });

        // Enrollment Doughnut Chart
        const enrollmentCtx = document.getElementById('enrollmentChart').getContext('2d');
        new Chart(enrollmentCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.EnrollmentBatchLabels)),
                datasets: [{
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.EnrollmentBatchValues)),
                    backgroundColor: [
                        '#6366F1', '#8B5CF6', '#A855F7', '#D946EF', '#EC4899', '#F43F5E'
                    ],
                    borderColor: isDarkMode ? '#1F2937' : '#FFFFFF',
                    borderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '60%',
                plugins: {
                    legend: {
                        position: 'right',
                        labels: { usePointStyle: true, padding: 15 }
                    }
                }
            }
        });

        // Batch Attendance Bar Chart
        const batchCtx = document.getElementById('batchAttendanceChart').getContext('2d');
        new Chart(batchCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BatchLabels)),
                datasets: [{
                    label: 'Attendance Rate (%)',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BatchAttendanceValues)),
                    backgroundColor: 'rgba(16, 185, 129, 0.8)',
                    borderRadius: 8,
                    borderSkipped: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        ticks: { callback: value => value + '%' }
                    }
                }
            }
        });

        // Course Attendance Horizontal Bar Chart
        const courseCtx = document.getElementById('courseAttendanceChart').getContext('2d');
        new Chart(courseCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CourseLabels)),
                datasets: [{
                    label: 'Attendance Rate (%)',

@{
    ViewData["Title"] = "My Courses";
}

<div class="p-4 sm:p-6 space-y-6" x-data="enrollmentApp()" x-init="loadData()">
    <!-- Loading State -->
    <div x-show="loading" class="flex items-center justify-center py-20">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
    </div>

    <div x-show="!loading" x-cloak>
        <!-- Header -->
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4 mb-6">
            <div>
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">My Courses</h1>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                    Manage your course enrollments for <span x-text="data.currentSemesterName"></span>
                </p>
            </div>

            <div class="flex flex-wrap items-center gap-2">
                <select x-model="selectedSemester" @@change="loadData()"
                        class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">Current Semester</option>
                    <template x-for="sem in data.semesters" :key="sem.semesterId">
                        <option :value="sem.semesterId" x-text="sem.semesterName"></option>
                    </template>
                </select>
                <button @@click="loadData()" class="p-2 text-gray-500 hover:text-gray-700 dark:hover:text-gray-300">
                    <svg class="w-5 h-5" :class="refreshing && 'animate-spin'" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Enrolled</span>
                    <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-gray-900 dark:text-white" x-text="data.stats?.enrolledCount || 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Courses</p>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Credits</span>
                    <div class="w-10 h-10 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-gray-900 dark:text-white" x-text="data.stats?.totalCredits || 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Total</p>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Available</span>
                    <div class="w-10 h-10 rounded-full bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-gray-900 dark:text-white" x-text="data.stats?.availableCount || 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">To enroll</p>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Semester</span>
                    <div class="w-10 h-10 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                </div>
                <div class="text-lg font-bold text-gray-900 dark:text-white truncate" x-text="data.currentSemesterName || 'N/A'"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Current</p>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="border-b border-gray-200 dark:border-gray-700 mb-6">
            <nav class="-mb-px flex space-x-8">
                <button @@click="activeTab = 'enrolled'"
                        :class="activeTab === 'enrolled' ? 'border-blue-500 text-blue-600 dark:text-blue-400' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                        class="py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                    My Enrolled Courses
                    <span class="ml-2 px-2 py-0.5 text-xs rounded-full"
                          :class="activeTab === 'enrolled' ? 'bg-blue-100 text-blue-600 dark:bg-blue-900/50 dark:text-blue-400' : 'bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400'"
                          x-text="data.enrolledCourses?.length || 0"></span>
                </button>
                <button @@click="activeTab = 'available'"
                        :class="activeTab === 'available' ? 'border-blue-500 text-blue-600 dark:text-blue-400' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'"
                        class="py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                    Available Courses
                    <span class="ml-2 px-2 py-0.5 text-xs rounded-full"
                          :class="activeTab === 'available' ? 'bg-blue-100 text-blue-600 dark:bg-blue-900/50 dark:text-blue-400' : 'bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400'"
                          x-text="data.availableCourses?.length || 0"></span>
                </button>
            </nav>
        </div>

        <!-- Enrolled Courses Tab -->
        <div x-show="activeTab === 'enrolled'" x-transition>
            <template x-if="data.enrolledCourses?.length > 0">
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
                    <template x-for="course in data.enrolledCourses" :key="course.enrollmentId">
                        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-md transition-shadow">
                            <div class="p-5">
                                <div class="flex justify-between items-start mb-3">
                                    <div class="flex-1 min-w-0 mr-3">
                                        <div class="flex items-center gap-2 mb-1">
                                            <span class="px-2 py-0.5 text-xs font-medium rounded bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300" x-text="course.courseCode"></span>
                                            <span class="px-2 py-0.5 text-xs font-medium rounded bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400" x-text="course.creditHours + ' CH'"></span>
                                        </div>
                                        <h3 class="text-lg font-bold text-gray-900 dark:text-white truncate" x-text="course.courseName"></h3>
                                        <p class="text-sm text-gray-500 dark:text-gray-400 truncate" x-text="course.teacherName"></p>
                                        <template x-if="course.batchName">
                                            <p class="text-xs text-gray-400 dark:text-gray-500"
                                               x-text="course.batchYear ? (course.batchName + ' (' + course.batchYear + ')') : course.batchName"></p>
                                        </template>
                                    </div>
                                    <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-300" x-text="course.status"></span>
                                </div>

                                <template x-if="course.totalSessions > 0">
                                    <div class="mb-4">
                                        <div class="flex justify-between text-sm mb-1">
                                            <span class="text-gray-600 dark:text-gray-400">Attendance</span>
                                            <span class="font-semibold" :class="course.attendancePercentage >= 75 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'" x-text="course.attendancePercentage + '%'"></span>
                                        </div>
                                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                                            <div class="h-2 rounded-full transition-all" :class="course.attendancePercentage >= 75 ? 'bg-green-500' : 'bg-red-500'" :style="'width:' + Math.min(course.attendancePercentage, 100) + '%'"></div>
                                        </div>
                                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1" x-text="course.presentSessions + ' / ' + course.totalSessions + ' classes'"></p>
                                    </div>
                                </template>

                                <template x-if="course.schedule?.length > 0">
                                    <div class="mb-4">
                                        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-2">Schedule</p>
                                        <div class="flex flex-wrap gap-1.5">
                                            <template x-for="slot in course.schedule" :key="slot.dayOfWeek">
                                                <span class="px-2 py-1 text-xs rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300" x-text="slot.dayName.substring(0,3) + ' ' + slot.startTime"></span>
                                            </template>
                                        </div>
                                    </div>
                                </template>

                                <template x-if="course.canUnenroll">
                                    <button type="button" @@click="confirmUnenroll(course)"
                                            class="w-full mt-2 px-4 py-2 text-sm font-medium text-red-600 dark:text-red-400 bg-red-50 dark:bg-red-900/20 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/40 transition-colors">
                                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                        Unenroll
                                    </button>
                                </template>
                                <template x-if="!course.canUnenroll">
                                    <div class="mt-2 px-3 py-2 text-xs text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700/50 rounded-lg text-center">
                                        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>
                                        <span x-text="course.unenrollBlockedReason"></span>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </template>
                </div>
            </template>
            <template x-if="!data.enrolledCourses?.length">
                <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700">
                    <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 dark:bg-gray-700 mb-6">
                        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No Enrolled Courses</h3>
                    <p class="text-gray-500 dark:text-gray-400 max-w-sm mx-auto mb-4">Browse available courses to get started.</p>
                    <button @@click="activeTab = 'available'" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                        Browse Courses
                    </button>
                </div>
            </template>
        </div>

        <!-- Available Courses Tab -->
        <div x-show="activeTab === 'available'" x-transition>
            <template x-if="data.availableCourses?.length > 0">
                <div>
                    <div class="mb-4">
                        <input type="text" x-model="searchQuery" placeholder="Search courses..."
                               class="w-full md:w-80 px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
                        <template x-for="course in filteredAvailableCourses" :key="course.courseAssignmentId">
                            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-md transition-shadow">
                                <div class="p-5">
                                    <div class="flex justify-between items-start mb-3">
                                        <div class="flex-1 min-w-0 mr-3">
                                            <div class="flex items-center gap-2 mb-1 flex-wrap">
                                                <span class="px-2 py-0.5 text-xs font-medium rounded bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300" x-text="course.courseCode"></span>
                                                <span class="px-2 py-0.5 text-xs font-medium rounded bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400" x-text="course.creditHours + ' CH'"></span>
                                                <template x-if="course.isOwnBatch">
                                                    <span class="px-2 py-0.5 text-xs font-medium rounded bg-green-100 text-green-700 dark:bg-green-900/50 dark:text-green-300">Your Batch</span>
                                                </template>
                                            </div>
                                            <h3 class="text-lg font-bold text-gray-900 dark:text-white truncate" x-text="course.courseName"></h3>
                                            <p class="text-sm text-gray-500 dark:text-gray-400 truncate" x-text="course.teacherName"></p>
                                            <p class="text-xs text-gray-400 dark:text-gray-500"
                                               x-text="course.batchYear ? (course.batchName + ' (' + course.batchYear + ')') : course.batchName"></p>
                                        </div>
                                    </div>

                                    <template x-if="course.schedule?.length > 0">
                                        <div class="mb-4">
                                            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-2">Schedule</p>
                                            <div class="flex flex-wrap gap-1.5">
                                                <template x-for="slot in course.schedule" :key="slot.dayOfWeek">
                                                    <span class="px-2 py-1 text-xs rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300" x-text="slot.dayName.substring(0,3) + ' ' + slot.startTime + ' - ' + slot.endTime"></span>
                                                </template>
                                            </div>
                                        </div>
                                    </template>
                                    <template x-if="!course.schedule?.length">
                                        <p class="text-xs text-gray-400 dark:text-gray-500 mb-4">Schedule not yet assigned</p>
                                    </template>

                                    <template x-if="course.canEnroll">
                                        <button type="button" @@click="confirmEnroll(course)" :disabled="actionLoading"
                                                class="w-full px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors disabled:opacity-50">
                                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                                            Enroll Now
                                        </button>
                                    </template>
                                    <template x-if="!course.canEnroll">
                                        <div class="px-3 py-2 text-xs text-amber-700 dark:text-amber-400 bg-amber-50 dark:bg-amber-900/20 rounded-lg text-center">
                                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                                            <span x-text="course.enrollBlockedReason"></span>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </template>
            <template x-if="!data.availableCourses?.length">
                <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700">
                    <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 dark:bg-gray-700 mb-6">
                        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No Available Courses</h3>
                    <p class="text-gray-500 dark:text-gray-400 max-w-sm mx-auto">
                        <span x-show="selectedSemester && selectedSemester != data.currentSemesterId">You can only enroll in courses for the current semester.</span>
                        <span x-show="!selectedSemester || selectedSemester == data.currentSemesterId">All courses are already enrolled or not available.</span>
                    </p>
                </div>
            </template>
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div x-show="showModal" x-cloak class="fixed inset-0 z-50 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div x-show="showModal" x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
                 class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" @@click="showModal = false"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>
            <div x-show="showModal" x-transition class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-2xl px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full sm:mx-0 sm:h-10 sm:w-10"
                         :class="modalAction === 'enroll' ? 'bg-blue-100 dark:bg-blue-900/50' : 'bg-red-100 dark:bg-red-900/50'">
                        <svg x-show="modalAction === 'enroll'" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                        <svg x-show="modalAction === 'unenroll'" class="h-6 w-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    </div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white" x-text="modalTitle"></h3>
                        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400" x-text="modalMessage"></p>
                    </div>
                </div>
                <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse gap-3">
                    <button type="button" @@click="executeAction()" :disabled="actionLoading"
                            class="w-full inline-flex justify-center rounded-lg px-4 py-2 text-white font-medium sm:w-auto disabled:opacity-50"
                            :class="modalAction === 'enroll' ? 'bg-blue-600 hover:bg-blue-700' : 'bg-red-600 hover:bg-red-700'">
                        <svg x-show="actionLoading" class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span x-text="modalAction === 'enroll' ? 'Enroll' : 'Unenroll'"></span>
                    </button>
                    <button type="button" @@click="showModal = false" :disabled="actionLoading"
                            class="mt-3 w-full inline-flex justify-center rounded-lg border border-gray-300 dark:border-gray-600 px-4 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-medium hover:bg-gray-50 dark:hover:bg-gray-600 sm:mt-0 sm:w-auto disabled:opacity-50">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast -->

@model AMS.Models.ViewModels.InstitutionSettingsViewModel
@{
    ViewData["Title"] = "Institution Settings";
}

<div class="mx-auto max-w-4xl">
    <!-- Header -->
    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h2 class="text-2xl font-bold text-slate-800 dark:text-white">Institution Settings</h2>
            <p class="mt-1 text-slate-500 dark:text-slate-400">Configure your institution details and branding</p>
        </div>
        <a asp-action="Index"
           class="inline-flex items-center justify-center gap-2 rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Profile
        </a>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="mb-6 rounded-lg bg-green-50 p-4 text-sm text-green-800 dark:bg-green-900/20 dark:text-green-400" role="alert">
            <div class="flex items-center gap-2">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                @TempData["success"]
            </div>
        </div>
    }

    <form asp-action="Institution" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800">
            <!-- Basic Information -->
            <div class="border-b border-slate-200 p-6 dark:border-slate-700">
                <h3 class="mb-4 text-lg font-semibold text-slate-800 dark:text-white">Basic Information</h3>
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div class="sm:col-span-2">
                        <label asp-for="InstitutionName" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300"></label>
                        <input asp-for="InstitutionName"
                               class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-slate-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-white"
                               placeholder="Enter institution name" />
                        <span asp-validation-for="InstitutionName" class="mt-1 text-sm text-red-500"></span>
                    </div>
                    <div class="sm:col-span-2">
                        <label asp-for="Address" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300"></label>
                        <textarea asp-for="Address" rows="3"
                                  class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-slate-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-white"
                                  placeholder="Enter institution address"></textarea>
                    </div>
                    <div>
                        <label asp-for="Phone" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300"></label>
                        <input asp-for="Phone" type="tel"
                               class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-slate-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-white"
                               placeholder="+1 234 567 890" />
                    </div>
                    <div>
                        <label asp-for="Email" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300"></label>
                        <input asp-for="Email" type="email"
                               class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-slate-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-white"
                               placeholder="info@institution.edu" />
                        <span asp-validation-for="Email" class="mt-1 text-sm text-red-500"></span>
                    </div>
                    <div>
                        <label asp-for="AcademicYear" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300"></label>
                        <input asp-for="AcademicYear"
                               class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-slate-800 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-700 dark:text-white"
                               placeholder="2024-2025" />
                    </div>
                </div>
            </div>

            <!-- Logo Upload -->
            <div class="border-b border-slate-200 p-6 dark:border-slate-700">
                <h3 class="mb-4 text-lg font-semibold text-slate-800 dark:text-white">Institution Logo</h3>
                <p class="mb-4 text-sm text-slate-500 dark:text-slate-400">This logo will be displayed in the sidebar, PDF reports, and other documents.</p>

                <div class="flex flex-col gap-6 sm:flex-row sm:items-start">
                    <!-- Current Logo Preview -->
                    <div class="flex-shrink-0">
                        @if (!string.IsNullOrEmpty(Model.CurrentLogoPath))
                        {
                            <div class="relative">
                                <img src="@Model.CurrentLogoPath" alt="Current Logo" class="h-32 w-32 rounded-lg border border-slate-200 object-contain dark:border-slate-600" />
                                <span class="mt-2 block text-xs text-slate-500 dark:text-slate-400">Current Logo</span>
                            </div>
                        }
                        else
                        {
                            <div class="flex h-32 w-32 items-center justify-center rounded-lg border-2 border-dashed border-slate-300 bg-slate-50 dark:border-slate-600 dark:bg-slate-700">
                                <div class="text-center">
                                    <svg class="mx-auto h-10 w-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <span class="mt-1 block text-xs text-slate-500 dark:text-slate-400">No Logo</span>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Upload Input -->
                    <div class="flex-1">
                        <label for="LogoFile" class="mb-2 block text-sm font-medium text-slate-700 dark:text-slate-300">Upload New Logo</label>
                        <input asp-for="LogoFile" type="file" accept=".jpg,.jpeg,.png,.gif,.svg"
                               class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-slate-800 file:mr-4 file:rounded file:border-0 file:bg-indigo-50 file:px-4 file:py-2 file:text-sm file:font-medium file:text-indigo-700 hover:file:bg-indigo-100 dark:border-slate-600 dark:bg-slate-700 dark:text-white dark:file:bg-indigo-900/30 dark:file:text-indigo-400" />
                        <span asp-validation-for="LogoFile" class="mt-1 text-sm text-red-500"></span>
                        <p class="mt-2 text-xs text-slate-500 dark:text-slate-400">Supported formats: JPG, PNG, GIF, SVG. Max size: 2MB</p>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end gap-3 p-6">
                <a asp-action="Index"
                   class="rounded-lg border border-slate-300 bg-white px-5 py-2.5 text-sm font-medium text-slate-700 hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-300 dark:hover:bg-slate-600">
                    Cancel
                </a>
                <button type="submit"
                        class="rounded-lg bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500/20">
                    Save Changes
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

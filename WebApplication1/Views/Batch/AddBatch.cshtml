@model AMS.Models.ViewModels.AddBatchViewModel
@{
    ViewData["Title"] = "Add New Batch";
}

<div class="mb-6">
    <h2 class="text-title-md2 font-bold text-gray-900 dark:text-white">
        Add New Batch
    </h2>
</div>

<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Batch Information</h3>
    </div>

    <form method="post" asp-action="AddBatch">
        @Html.AntiForgeryToken()

        <div class="space-y-6 p-6">
            <!-- Batch Name -->
            <div>
                <label asp-for="BatchName" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Batch Name<span class="text-error-500">*</span>
                </label>
                <input asp-for="BatchName" type="text" placeholder="e.g., Batch A, Morning Batch, CS-2024"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="BatchName" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Year -->
            <div>
                <label asp-for="Year" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Year<span class="text-error-500">*</span>
                </label>
                <input asp-for="Year" type="number" placeholder="2024" min="2000" max="2100"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="Year" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Active Status -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Status
                </label>
                <div class="flex items-center">
                    <input asp-for="IsActive" type="checkbox"
                           class="h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900" />
                    <label asp-for="IsActive" class="ml-2 text-sm text-gray-700 dark:text-gray-400">
                        Active
                    </label>
                </div>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                    Only active batches will be available for student enrollment
                </p>
            </div>
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-end gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4 dark:border-gray-800 dark:bg-gray-800/50">
            <a asp-action="Index"
               class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white px-5 py-2.5 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-400/50 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-300 dark:hover:bg-gray-800">
                Cancel
            </a>
            <button type="submit"
                    class="inline-flex items-center justify-center rounded-lg bg-indigo-600 px-5 py-2.5 text-sm font-medium text-white transition-colors hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500/50">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Batch
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
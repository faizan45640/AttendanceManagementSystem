@model AMS.Models.ViewModels.AddEnrollmentViewModel;

@{
    ViewData["Title"] = "Edit Enrollment";
}

<div class="p-4 sm:p-6 max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center gap-3 mb-2">
            <a href="@Url.Action("Enrollments")"
               class="inline-flex items-center text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Enrollments
            </a>
        </div>
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">Edit Enrollment</h1>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Update enrollment details and status</p>
    </div>

    <!-- Form -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
        <div class="p-5 sm:p-6">
            <form asp-action="EditEnrollment" method="post">
                @Html.AntiForgeryToken()

                <div class="space-y-6">
                    <!-- Student (Read-only) -->
                    <div>
                        <label asp-for="StudentId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Student <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="StudentId" asp-items="Model.Students"
                                class="w-full px-4 py-2.5 bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white cursor-not-allowed"
                                disabled>
                            <option value="">-- Select Student --</option>
                        </select>
                        <input type="hidden" asp-for="StudentId" />
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Student cannot be changed after enrollment is created</p>
                    </div>

                    <!-- Course (Read-only) -->
                    <div>
                        <label asp-for="CourseId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Course <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="CourseId" asp-items="Model.Courses"
                                class="w-full px-4 py-2.5 bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white cursor-not-allowed"
                                disabled>
                            <option value="">-- Select Course --</option>
                        </select>
                        <input type="hidden" asp-for="CourseId" />
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Course cannot be changed after enrollment is created</p>
                    </div>

                    <!-- Grid for Semester, Batch and Status -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- Semester (Read-only) -->
                        <div>
                            <label asp-for="SemesterId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Semester <span class="text-red-500">*</span>
                            </label>
                            <select asp-for="SemesterId" asp-items="Model.Semesters"
                                    class="w-full px-4 py-2.5 bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-900 dark:text-white cursor-not-allowed"
                                    disabled>
                                <option value="">-- Select Semester --</option>
                            </select>
                            <input type="hidden" asp-for="SemesterId" />
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Semester cannot be changed</p>
                        </div>

                        <!-- Batch (Editable) -->
                        <div>
                            <label asp-for="BatchId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Batch (Optional)
                            </label>
                            <select asp-for="BatchId" asp-items="Model.Batches"
                                    class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 dark:text-white transition-colors">
                                <option value="">-- Default (Student's Batch) --</option>
                            </select>
                            <span asp-validation-for="BatchId" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Override student's default batch</p>
                        </div>

                        <!-- Status (Editable) -->
                        <div>
                            <label asp-for="Status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                Status <span class="text-red-500">*</span>
                            </label>
                            <select asp-for="Status"
                                    class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 dark:text-white transition-colors">
                                <option value="">-- Select Status --</option>
                                <option value="Active">Active</option>
                                <option value="Dropped">Dropped</option>
                                <option value="Completed">Completed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                        </div>
                    </div>

                    <!-- Status Guide -->
                    <div class="bg-gray-50 dark:bg-gray-900/50 border border-gray-200 dark:border-gray-700 rounded-lg p-4">
                        <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-3">Status Guide</h3>
                        <div class="space-y-2">
                            <div class="flex items-start">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                    Active
                                </span>
                                <p class="ml-3 text-sm text-gray-600 dark:text-gray-400">Student is currently enrolled in this course</p>
                            </div>
                            <div class="flex items-start">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                                    Dropped
                                </span>
                                <p class="ml-3 text-sm text-gray-600 dark:text-gray-400">Student has withdrawn from this course</p>
                            </div>
                            <div class="flex items-start">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                                    Completed
                                </span>
                                <p class="ml-3 text-sm text-gray-600 dark:text-gray-400">Student has finished this course</p>
                            </div>
                        </div>
                    </div>

                    <!-- Warning Box -->
                    <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-300">Important Note</h3>
                                <div class="mt-1 text-sm text-yellow-700 dark:text-yellow-400">
                                    Only the enrollment status can be changed. To change student, course, or semester, please delete this enrollment and create a new one.
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Validation Summary -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-800 dark:text-red-300">Please correct the following errors:</h3>
                                    <div asp-validation-summary="All" class="mt-2 text-sm text-red-700 dark:text-red-400"></div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Form Actions -->
                    <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                        <button type="submit"
                                class="inline-flex items-center justify-center px-6 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Save Changes
                        </button>
                        <a href="@Url.Action("Enrollments")"
                           class="inline-flex items-center justify-center px-6 py-2.5 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg transition-colors duration-200">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Scripts {
    <script>
        function viewCourse(id) {
            const courses = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Courses));
            const data = courses.find(c => c.CourseId === id);

            if (data) {
                const statusHtml = data.IsActive
                    ? '<span class="inline-block text-sm font-semibold text-success-600 dark:text-success-500">● Active</span>'
                    : '<span class="inline-block text-sm font-semibold text-error-600 dark:text-error-500">● Inactive</span>';

                document.getElementById('viewModalContent').innerHTML = `
                    <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Course Code</p>
                        <p class="text-sm font-semibold text-gray-900 dark:text-white">${data.CourseCode || 'N/A'}</p>
                    </div>

                    <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Course Name</p>
                        <p class="text-sm font-semibold text-gray-900 dark:text-white">${data.CourseName || 'N/A'}</p>
                    </div>

                    <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Credit Hours</p>
                        <p class="text-sm font-semibold text-gray-900 dark:text-white">${data.CreditHours || 0}</p>
                    </div>

                    <div class="grid grid-cols-2 gap-3">
                        <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Assignments</p>
                            <p class="text-sm font-semibold text-gray-900 dark:text-white">${data.CourseAssignments?.length || 0}</p>
                        </div>

                        <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Enrollments</p>
                            <p class="text-sm font-semibold text-gray-900 dark:text-white">${data.Enrollments?.length || 0}</p>
                        </div>
                    </div>

                    <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Status</p>
                        ${statusHtml}
                    </div>
                `;

                document.getElementById('viewModal').classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeViewModal() {
            document.getElementById('viewModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function confirmDelete(id) {
            const courses = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Courses));
            const data = courses.find(c => c.CourseId === id);

            if (data) {
                const assignmentCount = data.CourseAssignments?.length || 0;
                const enrollmentCount = data.Enrollments?.length || 0;
                let message = `Are you sure you want to delete "${data.CourseCode} - ${data.CourseName}"?`;

                if (assignmentCount > 0 || enrollmentCount > 0) {
                    message = `<p class="font-semibold text-red-600 dark:text-red-400">Warning: This course has ${assignmentCount} assignment(s) and ${enrollmentCount} enrollment(s).</p>
                              <p class="mt-2">Deleting this course will also remove all associated data. This action cannot be undone.</p>`;
                } else {
                    message = `<p>Are you sure you want to delete "${data.CourseCode} - ${data.CourseName}"? This action cannot be undone.</p>`;
                }

                document.getElementById('deleteMessage').innerHTML = message;
                document.getElementById('deleteId').value = id;

                document.getElementById('deleteModal').classList.remove('hidden');
                document.getElementById('deleteModal').classList.add('flex');
            }
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.getElementById('deleteModal').classList.remove('flex');
        }
    </script>
}

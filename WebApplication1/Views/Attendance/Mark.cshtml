@model AMS.Models.ViewModels.MarkAttendanceViewModel
@{
    ViewData["Title"] = "Mark Attendance";
}

@if (TempData["success"] != null)
{
    <div class="mb-4 rounded-lg bg-success-50 p-4 text-sm text-success-800 dark:bg-gray-800 dark:text-success-400" role="alert">
        <span class="font-medium">Success!</span> @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="mb-4 rounded-lg bg-error-50 p-4 text-sm text-error-800 dark:bg-gray-800 dark:text-error-400" role="alert">
        <span class="font-medium">Error!</span> @TempData["error"]
    </div>
}

<div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] lg:p-6">
    <div class="mb-6 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                Mark Attendance
            </h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                @Model.CourseName - @Model.BatchName
            </p>
        </div>
        <div class="flex items-center gap-2">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                @Model.Date.ToLongDateString()
            </span>
            <span class="text-sm text-gray-500 dark:text-gray-400">
                (@Model.StartTime - @Model.EndTime)
            </span>
        </div>
    </div>

    <!-- Date Selection Form -->
    <form asp-action="LoadByDate" method="post" class="mb-6 flex items-end gap-4">
        <input type="hidden" asp-for="SlotId" />
        <input type="hidden" asp-for="CourseAssignmentId" />
        <input type="hidden" asp-for="StartTime" />
        <input type="hidden" asp-for="EndTime" />

        <div class="flex-1 max-w-xs">
            <label asp-for="Date" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                Select Date
            </label>
            <select asp-for="Date" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500" onchange="this.form.submit()">
                @foreach (var d in Model.ValidDates)
                {
                    <option value="@d.ToString("yyyy-MM-dd")" selected="@(d == Model.Date)">
                        @d.ToLongDateString()
                    </option>
                }
            </select>
        </div>
    </form>

    <form asp-action="Save" method="post">
        <input type="hidden" asp-for="SlotId" />
        <input type="hidden" asp-for="CourseAssignmentId" />
        <input type="hidden" asp-for="CourseName" />
        <input type="hidden" asp-for="BatchName" />
        <input type="hidden" asp-for="Date" />
        <input type="hidden" asp-for="StartTime" />
        <input type="hidden" asp-for="EndTime" />

        <div class="mb-4 flex gap-2">
            <button type="button" onclick="markAll('Present')" class="rounded-lg bg-success-50 px-3 py-1.5 text-xs font-medium text-success-700 hover:bg-success-100 dark:bg-success-900/20 dark:text-success-400">
                Mark All Present
            </button>
            <button type="button" onclick="markAll('Absent')" class="rounded-lg bg-error-50 px-3 py-1.5 text-xs font-medium text-error-700 hover:bg-error-100 dark:bg-error-900/20 dark:text-error-400">
                Mark All Absent
            </button>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full min-w-[600px] border-collapse text-left">
                <thead>
                    <tr class="border-b border-gray-200 dark:border-gray-800">
                        <th class="px-4 py-3 text-sm font-medium text-gray-500 dark:text-gray-400">Roll No</th>
                        <th class="px-4 py-3 text-sm font-medium text-gray-500 dark:text-gray-400">Student Name</th>
                        <th class="px-4 py-3 text-sm font-medium text-gray-500 dark:text-gray-400">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Students.Count; i++)
                    {
                        <tr class="border-b border-gray-200 last:border-0 dark:border-gray-800 hover:bg-gray-50 dark:hover:bg-gray-800/50">
                            <td class="px-4 py-3 text-sm text-gray-800 dark:text-white/90">
                                @Model.Students[i].RollNumber
                                <input type="hidden" asp-for="Students[i].StudentId" />
                                <input type="hidden" asp-for="Students[i].StudentName" />
                                <input type="hidden" asp-for="Students[i].RollNumber" />
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-800 dark:text-white/90">
                                @Model.Students[i].StudentName
                            </td>
                            <td class="px-4 py-3 text-sm">
                                <div class="flex items-center gap-4">
                                    <label class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" asp-for="Students[i].Status" value="Present" class="text-success-500 focus:ring-success-500" />
                                        <span class="text-sm text-gray-700 dark:text-gray-300">Present</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" asp-for="Students[i].Status" value="Absent" class="text-error-500 focus:ring-error-500" />
                                        <span class="text-sm text-gray-700 dark:text-gray-300">Absent</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" asp-for="Students[i].Status" value="Late" class="text-warning-500 focus:ring-warning-500" />
                                        <span class="text-sm text-gray-700 dark:text-gray-300">Late</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer">
                                        <input type="radio" asp-for="Students[i].Status" value="Excused" class="text-blue-500 focus:ring-blue-500" />
                                        <span class="text-sm text-gray-700 dark:text-gray-300">Excused</span>
                                    </label>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex justify-end">
            <button type="submit" class="rounded-lg bg-brand-500 px-6 py-2.5 text-sm font-medium text-white hover:bg-brand-600 active:bg-brand-700">
                Save Attendance
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function markAll(status) {
            const radios = document.querySelectorAll(`input[type="radio"][value="${status}"]`);
            radios.forEach(radio => radio.checked = true);
        }
    </script>
}

@{
    ViewData["Title"] = "My Attendance";
    var initialSemesterId = ViewBag.InitialSemesterId as int?;
}

<style>
    @@media print {
        .no-print, .no-print * {
            display: none !important;
        }

        @@page {
            margin: 0.5in;
        }

        body {
            print-color-adjust: exact;
            -webkit-print-color-adjust: exact;
        }

        .print-header {
            display: block !important;
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
        }

            .print-header h1 {
                font-size: 20px;
                margin: 0;
                font-weight: bold;
            }

            .print-header p {
                font-size: 12px;
                margin: 5px 0;
                color: #666;
            }

        .course-card {
            break-inside: avoid;
            border: 1px solid #ddd !important;
            margin-bottom: 12px;
            page-break-inside: avoid;
        }

        .progress-bar {
            height: 8px !important;
        }
    }

    .print-header {
        display: none;
    }
</style>

<div class="p-4 sm:p-6 space-y-6" x-data="attendanceApp()" x-init="init(@(initialSemesterId?.ToString() ?? "null"))">
    <div x-show="loading" class="flex items-center justify-center py-20">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
    </div>

    <div x-show="!loading" x-cloak>
        <!-- Print Header -->
        <div class="print-header">
            <h1>Attendance Report</h1>
            <p><span x-text="data.studentName || 'N/A'"></span> (<span x-text="data.rollNumber || 'N/A'"></span>) &bull; <span x-text="data.batchName || 'N/A'"></span></p>
            <p>Generated on <span x-text="generatedOn"></span></p>
        </div>

        <!-- Header -->
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4 no-print">
            <div>
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">My Attendance</h1>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Detailed attendance report for all courses</p>
            </div>

            <div class="flex flex-wrap items-center gap-2">
                <!-- Semester Filter -->
                <div class="flex items-center">
                    <select x-model="selectedSemester" @@change="onSemesterChange()"
                            class="px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">All Semesters</option>
                        <template x-for="sem in (data.semesters || [])" :key="sem.semesterId">
                            <option :value="sem.semesterId" x-text="sem.semesterName"></option>
                        </template>
                    </select>
                </div>

                <!-- Export Buttons -->
                <a :href="exportPdfUrl"
                   class="inline-flex items-center px-4 py-2 bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 font-medium rounded-lg hover:bg-red-100 dark:hover:bg-red-900/40 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                    PDF
                </a>
                <button type="button" @@click="loadData()"
                        class="inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                    <svg class="w-4 h-4 mr-2" :class="refreshing && 'animate-spin'" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Refresh
                </button>
                <button type="button" onclick="window.print()"
                        class="inline-flex items-center px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                    </svg>
                    Print
                </button>
            </div>
        </div>

        <!-- Overall Summary Cards -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            <!-- Overall Percentage -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Overall</span>
                    <div class="w-10 h-10 rounded-full flex items-center justify-center" :class="(data.overall?.isLow ? 'bg-red-100 dark:bg-red-900/30' : 'bg-green-100 dark:bg-green-900/30')">
                        <svg class="w-5 h-5" :class="(data.overall?.isLow ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400')" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold" :class="(data.overall?.isLow ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400')" x-text="(data.overall?.percentage ?? 0).toFixed(1) + '%'">
                </div>
                <div class="mt-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5">
                    <div class="h-1.5 rounded-full" :class="(data.overall?.isLow ? 'bg-red-500' : 'bg-green-500')" :style="'width:' + Math.min((data.overall?.percentage ?? 0), 100) + '%'"></div>
                </div>
            </div>

            <!-- Total Classes -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Classes</span>
                    <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-gray-900 dark:text-white" x-text="data.overall?.total ?? 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Conducted</p>
            </div>

            <!-- Present -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Present</span>
                    <div class="w-10 h-10 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-green-600 dark:text-green-400" x-text="data.overall?.present ?? 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Attended</p>
            </div>

            <!-- Absent -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Absent</span>
                    <div class="w-10 h-10 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-red-600 dark:text-red-400" x-text="data.overall?.absent ?? 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Missed</p>
            </div>

            <!-- Late -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Late</span>
                    <div class="w-10 h-10 rounded-full bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-amber-600 dark:text-amber-400" x-text="data.overall?.late ?? 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Late arrivals</p>
            </div>

            <!-- Excused -->
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-5">
                <div class="flex items-center justify-between mb-3">
                    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Excused</span>
                    <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </div>
                </div>
                <div class="text-3xl font-bold text-blue-600 dark:text-blue-400" x-text="data.overall?.excused ?? 0"></div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Excused</p>
            </div>
        </div>

        <!-- Warning Alert -->
        <template x-if="coursesBelow75 > 0">
            <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-700 rounded-xl p-4 no-print">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0">
                        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <div>
                        <h4 class="font-semibold text-amber-800 dark:text-amber-200">Attendance Warning</h4>
                        <p class="text-sm text-amber-700 dark:text-amber-300 mt-1">
                            You have <strong><span x-text="coursesBelow75"></span> course<span x-show="coursesBelow75 > 1">s</span></strong> with attendance below 75%. Please improve your attendance to meet the minimum requirement.
                        </p>
                    </div>
                </div>
            </div>
        </template>

        <!-- Course Cards -->
        <template x-if="(data.courses || []).length > 0">
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-5">
                <template x-for="course in data.courses" :key="course.assignmentId">
                    <div x-data="{ expanded: false }" class="course-card bg-white dark:bg-gray-800 rounded-2xl shadow-sm border overflow-hidden"
                         :class="course.isLow ? 'border-red-200 dark:border-red-800' : 'border-gray-200 dark:border-gray-700'">
                        <div class="p-5">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex-1 min-w-0 mr-4">
                                    <h3 class="text-lg font-bold text-gray-900 dark:text-white truncate" :title="course.courseName" x-text="course.courseName"></h3>
                                    <p class="text-sm text-gray-500 dark:text-gray-400 truncate" x-text="course.teacherName"></p>
                                    <p class="text-xs text-gray-400 dark:text-gray-500 mt-0.5" x-text="course.semesterName"></p>
                                </div>
                                <div class="flex flex-col items-end flex-shrink-0">
                                    <span class="text-3xl font-bold" :class="course.isLow ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400'" x-text="Math.round(course.percentage) + '%'">
                                    </span>
                                    <template x-if="course.isLow">
                                        <span class="text-[10px] font-semibold uppercase tracking-wide text-red-600 dark:text-red-400 mt-1">Below 75%</span>
                                    </template>
                                </div>
                            </div>

                            <div class="progress-bar w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5 mb-4 overflow-hidden">
                                <div class="h-full rounded-full transition-all duration-500" :class="course.isLow ? 'bg-red-500' : 'bg-green-500'"
                                     :style="'width:' + Math.min(course.percentage, 100) + '%'">
                                </div>
                            </div>

                            <div class="grid grid-cols-3 gap-2 mb-4">
                                <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-2 text-center">
                                    <div class="text-lg font-bold text-green-700 dark:text-green-300" x-text="course.present"></div>
                                    <div class="text-[11px] text-green-700/80 dark:text-green-300/80">Present</div>
                                </div>
                                <div class="bg-red-50 dark:bg-red-900/20 rounded-lg p-2 text-center">
                                    <div class="text-lg font-bold text-red-700 dark:text-red-300" x-text="course.absent"></div>
                                    <div class="text-[11px] text-red-700/80 dark:text-red-300/80">Absent</div>
                                </div>
                                <div class="bg-gray-50 dark:bg-gray-900/20 rounded-lg p-2 text-center">
                                    <div class="text-lg font-bold text-gray-700 dark:text-gray-300" x-text="course.total"></div>
                                    <div class="text-[11px] text-gray-700/80 dark:text-gray-300/80">Total</div>
                                </div>
                            </div>

                            <div class="flex items-center justify-between gap-2">
                                <button type="button" @@click="expanded = !expanded"
                                        class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline">
                                    <span x-text="expanded ? 'Hide history' : 'Show history'"></span>
                                </button>
                                <a :href="exportCoursePdfUrl(course.assignmentId)"
                                   class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline">
                                    Export course PDF
                                </a>
                            </div>

                            <div x-show="expanded" x-collapse class="mt-4">
                                <template x-if="(course.history || []).length > 0">
                                    <div class="space-y-2">
                                        <template x-for="h in course.history" :key="h.date + '-' + h.time + '-' + h.status">
                                            <div class="flex items-center justify-between text-sm bg-gray-50 dark:bg-gray-900/20 rounded-lg p-2">
                                                <div class="text-gray-700 dark:text-gray-200">
                                                    <div class="font-medium" x-text="h.date"></div>
                                                    <div class="text-xs text-gray-500 dark:text-gray-400" x-text="h.time"></div>
                                                </div>
                                                <span class="px-2 py-1 text-xs rounded-full"
                                                      :class="statusPillClass(h.status)"
                                                      x-text="h.status"></span>
                                            </div>
                                        </template>
                                    </div>
                                </template>
                                <template x-if="!(course.history || []).length">
                                    <div class="text-sm text-gray-500 dark:text-gray-400">No recent history.</div>
                                </template>
                            </div>
                        </div>
                    </div>
                </template>
            </div>
        </template>

        <template x-if="(data.courses || []).length === 0">
            <div class="text-center py-16 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 dark:bg-gray-700 mb-6">
                    <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No Attendance Records</h3>
                <p class="text-gray-500 dark:text-gray-400 max-w-sm mx-auto">No attendance data was found for the selected semester.</p>
            </div>
        </template>

        <!-- Toast -->
        <div x-show="toast.show" x-transition class="fixed bottom-4 right-4 z-50">
            <div class="rounded-lg shadow-lg p-4 max-w-sm" :class="toast.type === 'success' ? 'bg-green-50 dark:bg-green-900/50 border border-green-200 dark:border-green-800' : 'bg-red-50 dark:bg-red-900/50 border border-red-200 dark:border-red-800'">
                <div class="flex items-center">
                    <svg x-show="toast.type === 'success'" class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                    <svg x-show="toast.type === 'error'" class="w-5 h-5 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                    <p class="text-sm font-medium" :class="toast.type === 'success' ? 'text-green-800 dark:text-green-200' : 'text-red-800 dark:text-red-200'" x-text="toast.message"></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
function attendanceApp() {
    const pdfBaseUrl = '@Url.Action("ExportMyAttendanceToPdf")';
    const coursePdfBaseUrl = '@Url.Action("ExportCourseAttendanceToPdf")';
    const jsonBaseUrl = '@Url.Action("GetMyAttendanceJson")';

    function isIntString(value) {
        return typeof value === 'string' && value.trim() !== '' && /^\d+$/.test(value);
    }

    return {
        loading: true,
        refreshing: false,
        data: { overall: {}, courses: [], semesters: [] },
        selectedSemester: '',
        generatedOn: new Date().toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: '2-digit' }),
        toast: { show: false, message: '', type: 'success' },

        init(initialSemesterId) {
            if (typeof initialSemesterId === 'number' && !Number.isNaN(initialSemesterId)) {
                this.selectedSemester = String(initialSemesterId);
            }
            this.loadData();
        },

        get coursesBelow75() {
            const courses = Array.isArray(this.data.courses) ? this.data.courses : [];
            return courses.filter(c => c && c.isLow).length;
        },

        get exportPdfUrl() {
            if (this.selectedSemester && isIntString(this.selectedSemester)) {
                return pdfBaseUrl + '?semesterId=' + encodeURIComponent(this.selectedSemester);
            }
            return pdfBaseUrl;
        },

        exportCoursePdfUrl(assignmentId) {
            if (!assignmentId) return coursePdfBaseUrl;
            return coursePdfBaseUrl + '?assignmentId=' + encodeURIComponent(assignmentId);
        },

        statusPillClass(status) {
            const s = (status || '').toLowerCase();
            if (s === 'present') return 'bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-200';
            if (s === 'late') return 'bg-amber-100 text-amber-800 dark:bg-amber-900/40 dark:text-amber-200';
            if (s === 'excused') return 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-200';
            if (s === 'absent') return 'bg-red-100 text-red-800 dark:bg-red-900/40 dark:text-red-200';
            return 'bg-gray-100 text-gray-800 dark:bg-gray-900/40 dark:text-gray-200';
        },

        showToast(message, type) {
            this.toast = { show: true, message, type };
            setTimeout(() => { this.toast.show = false; }, 4000);
        },

        onSemesterChange() {
            if (this.selectedSemester && !isIntString(this.selectedSemester)) {
                this.showToast('Invalid semester selection', 'error');
                this.selectedSemester = '';
                return;
            }
            this.loadData();
        },

        async loadData() {
            this.refreshing = true;
            try {
                const url = jsonBaseUrl + (this.selectedSemester ? ('?semesterId=' + encodeURIComponent(this.selectedSemester)) : '');
                const response = await fetch(url, { headers: { 'Accept': 'application/json' } });
                const result = await response.json();
                if (result && result.success) {
                    const semesters = (result.semesters || []).map(s => ({
                        semesterId: s.semesterId ?? s.SemesterId,
                        semesterName: s.semesterName ?? s.SemesterName
                    })).filter(s => s.semesterId != null);

                    this.data = {
                        studentName: result.studentName,
                        rollNumber: result.rollNumber,
                        batchName: result.batchName,
                        semesterName: result.semesterName,
                        currentSemesterId: result.currentSemesterId,
                        overall: result.overall || {},
                        courses: Array.isArray(result.courses) ? result.courses : [],
                        semesters
                    };
                } else {
                    this.data = { overall: {}, courses: [], semesters: [] };
                    this.showToast('Failed to load attendance', 'error');
                }
            } catch (e) {
                console.error('Failed to load attendance:', e);
                this.data = { overall: {}, courses: [], semesters: [] };
                this.showToast('Failed to load attendance', 'error');
            } finally {
                this.loading = false;

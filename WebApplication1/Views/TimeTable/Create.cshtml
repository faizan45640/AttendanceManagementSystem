@model AMS.Models.ViewModels.AddTimetableViewModel
@{
    ViewData["Title"] = "Add Timetable";
}

<div class="mx-auto max-w-2xl rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] lg:p-6">
    <h3 class="mb-6 text-lg font-semibold text-gray-800 dark:text-white/90">
        Add New Timetable
    </h3>

    <form asp-action="Create">
        <div class="space-y-4">
            <div>
                <label asp-for="BatchId" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Batch
                </label>
                <select asp-for="BatchId" asp-items="Model.Batches" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500">
                    <option value="">Select Batch</option>
                </select>
                <span asp-validation-for="BatchId" class="mt-1 text-xs text-error-500"></span>
            </div>

            <div>
                <label asp-for="SemesterId" class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Semester
                </label>
                <select asp-for="SemesterId" asp-items="Model.Semesters" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500">
                    <option value="">Select Semester</option>
                </select>
                <span asp-validation-for="SemesterId" class="mt-1 text-xs text-error-500"></span>
            </div>

            <div class="flex items-center gap-2">
                <input asp-for="IsActive" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-brand-500 focus:ring-brand-500 dark:border-gray-700 dark:bg-gray-900">
                <label asp-for="IsActive" class="text-sm font-medium text-gray-700 dark:text-gray-400">
                    Is Active
                </label>
            </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-3">
            <a asp-action="Index" class="rounded-lg border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:text-gray-300 dark:hover:bg-white/[0.03]">
                Cancel
            </a>
            <button type="submit" class="rounded-lg bg-brand-500 px-4 py-2 text-sm font-medium text-white hover:bg-brand-600 active:bg-brand-700">
                Create Timetable
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

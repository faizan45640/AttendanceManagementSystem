@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // View Modal Functions
        function openViewModal(studentId, rollNumber, fullName, email, batch, status, createdAt) {
            document.getElementById('viewRollNumber').textContent = rollNumber || 'N/A';
            document.getElementById('viewFullName').textContent = fullName || 'N/A';
            document.getElementById('viewEmail').textContent = email || 'N/A';
            document.getElementById('viewBatch').textContent = batch || 'N/A';
            document.getElementById('viewCreatedAt').textContent = createdAt || 'N/A';

            const statusElement = document.getElementById('viewStatus');
            if (status === 'Active') {
                statusElement.className = 'inline-block text-sm font-semibold text-success-600 dark:text-success-500';
                statusElement.textContent = '● Active';
            } else {
                statusElement.className = 'inline-block text-sm font-semibold text-error-600 dark:text-error-500';
                statusElement.textContent = '● Inactive';
            }

            const modal = document.getElementById('viewModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closeViewModal() {
            const modal = document.getElementById('viewModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = 'auto';
        }

        // Delete Modal Functions
        function confirmDelete(studentId, studentName, attendanceCount, enrollmentCount) {
            document.getElementById('deleteStudentId').value = studentId;
            document.getElementById('deleteStudentName').textContent = studentName;

            const warningMessage = document.getElementById('warningMessage');
            if (attendanceCount > 0 || enrollmentCount > 0) {
                let warnings = [];
                if (attendanceCount > 0) warnings.push(`${attendanceCount} attendance record(s)`);
                if (enrollmentCount > 0) warnings.push(`${enrollmentCount} enrollment(s)`);
                warningMessage.textContent = `This student has ${warnings.join(' and ')}.`;
                warningMessage.classList.remove('hidden');
            } else {
                warningMessage.classList.add('hidden');
            }

            const modal = document.getElementById('deleteModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closeDeleteModal() {
            const modal = document.getElementById('deleteModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = 'auto';
        }
        // Close modals on escape key
        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape') {
                closeViewModal();
                closeDeleteModal();
                closeQuickEnrollModal();
            }
        });

        // Quick Enroll Functions
        let enrollCourses = [];
        let enrollSemesters = [];

        async function loadEnrollDropdownData() {
            try {
                const response = await fetch('/Enrollment/GetDropdownData');
                const data = await response.json();
                enrollCourses = data.courses || [];
                enrollSemesters = data.semesters || [];
            } catch (error) {
                console.error('Error loading enrollment dropdown data:', error);
            }
        }

        // Load enrollment dropdown data when page loads
        document.addEventListener('DOMContentLoaded', function () {
            loadEnrollDropdownData();
        });

        function openQuickEnrollStudent(studentId, rollNumber, fullName) {
            document.getElementById('enrollStudentId').value = studentId;
            document.getElementById('enrollStudentDisplay').textContent = fullName + ' (' + rollNumber + ')';

            // Hide messages
            document.getElementById('enrollMessage').classList.add('hidden');

            // Populate course dropdown
            const courseSelect = document.getElementById('enrollCourseId');
            courseSelect.innerHTML = '<option value="">-- Select Course --</option>';
            enrollCourses.forEach(c => {
                courseSelect.innerHTML += `<option value="${c.id}">${c.text}</option>`;
            });

            // Populate semester dropdown
            const semesterSelect = document.getElementById('enrollSemesterId');
            semesterSelect.innerHTML = '<option value="">-- Select Semester --</option>';
            enrollSemesters.forEach(s => {
                semesterSelect.innerHTML += `<option value="${s.id}">${s.text}</option>`;
            });

            // Reset form
            document.getElementById('quickEnrollForm').reset();
            document.getElementById('enrollStudentId').value = studentId;

            document.getElementById('quickEnrollModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeQuickEnrollModal() {
            document.getElementById('quickEnrollModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        document.getElementById('quickEnrollForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const submitBtn = document.getElementById('quickEnrollSubmitBtn');
            const messageDiv = document.getElementById('enrollMessage');

            submitBtn.disabled = true;
            submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Enrolling...';

            const formData = {
                studentId: parseInt(document.getElementById('enrollStudentId').value),
                courseId: parseInt(document.getElementById('enrollCourseId').value),
                semesterId: parseInt(document.getElementById('enrollSemesterId').value)
            };

            try {
                const response = await fetch('/Enrollment/QuickEnroll', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    messageDiv.textContent = result.message;
                    messageDiv.className = 'rounded-lg p-3 text-sm bg-green-50 text-green-800 dark:bg-green-900/20 dark:text-green-200 border border-green-200 dark:border-green-800';
                    messageDiv.classList.remove('hidden');

                    // Reset form
                    document.getElementById('quickEnrollForm').reset();

                    // Close modal after 1.5 seconds and reload page
                    setTimeout(() => {
                        closeQuickEnrollModal();
                        location.reload();
                    }, 1500);
                } else {
                    messageDiv.textContent = result.message || 'An error occurred';
                    messageDiv.className = 'rounded-lg p-3 text-sm bg-red-50 text-red-800 dark:bg-red-900/20 dark:text-red-200 border border-red-200 dark:border-red-800';
                    messageDiv.classList.remove('hidden');
                }
            } catch (error) {
                messageDiv.textContent = 'Network error. Please try again.';
                messageDiv.className = 'rounded-lg p-3 text-sm bg-red-50 text-red-800 dark:bg-red-900/20 dark:text-red-200 border border-red-200 dark:border-red-800';
                messageDiv.classList.remove('hidden');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg> Enroll';
            }
        });
    </script>

@model AMS.Models.ViewModels.AddCourseViewModel
@{
    ViewData["Title"] = "Add Course";
}

<!-- Breadcrumb -->
<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <h2 class="text-title-md2 font-bold text-gray-900 dark:text-white">
        Add New Course
    </h2>
    <nav>
        <ol class="flex items-center gap-2">
            <li>
                <a asp-controller="Home" asp-action="Index" class="text-sm font-medium text-gray-500 hover:text-brand-500 dark:text-gray-400">Home</a>
            </li>
            <li class="text-sm font-medium text-gray-500 dark:text-gray-400">/</li>
            <li>
                <a asp-controller="Course" asp-action="Courses" class="text-sm font-medium text-gray-500 hover:text-brand-500 dark:text-gray-400">Courses</a>
            </li>
            <li class="text-sm font-medium text-gray-500 dark:text-gray-400">/</li>
            <li class="text-sm font-medium text-brand-500">Add</li>
        </ol>
    </nav>
</div>

<!-- Form Card -->
<div class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-800 dark:bg-gray-900">
    <!-- Card Header -->
    <div class="border-b border-gray-200 px-6 py-4 dark:border-gray-800">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Course Information</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Fill in the details to create a new course</p>
    </div>

    <!-- Form -->
    <form method="post" asp-action="AddCourse">
        @Html.AntiForgeryToken()

        <div class="space-y-6 p-6">
            <!-- Course Code -->
            <div>
                <label asp-for="CourseCode" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Course Code<span class="text-error-500">*</span>
                </label>
                <input asp-for="CourseCode"
                       type="text"
                       placeholder="e.g., CS101, MATH201"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="CourseCode" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Course Name -->
            <div>
                <label asp-for="CourseName" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Course Name<span class="text-error-500">*</span>
                </label>
                <input asp-for="CourseName"
                       type="text"
                       placeholder="e.g., Introduction to Programming"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="CourseName" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Credit Hours -->
            <div>
                <label asp-for="CreditHours" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Credit Hours<span class="text-error-500">*</span>
                </label>
                <input asp-for="CreditHours"
                       type="number"
                       placeholder="3"
                       min="1"
                       max="10"
                       class="h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 shadow-sm placeholder:text-gray-400 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900 dark:text-white dark:placeholder:text-gray-500" />
                <span asp-validation-for="CreditHours" class="mt-1 block text-sm text-error-500"></span>
            </div>

            <!-- Active Status -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-400">
                    Status
                </label>
                <div class="flex items-center">
                    <input asp-for="IsActive"
                           type="checkbox"
                           class="h-4 w-4 rounded border-gray-300 text-brand-600 focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-900" />
                    <label asp-for="IsActive" class="ml-2 text-sm text-gray-700 dark:text-gray-400">
                        Active
                    </label>
                </div>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                    Only active courses will be available for assignments and enrollments
                </p>
            </div>
        </div>

        <!-- Card Footer -->
        <div class="flex items-center justify-end gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4 dark:border-gray-800 dark:bg-gray-800/50">
            <a asp-controller="Course" asp-action="Courses"
               class="inline-flex items-center justify-center rounded-lg border border-gray-300 bg-white px-5 py-2.5 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-400/50 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-300 dark:hover:bg-gray-800">
                CancelAC
            </a>
            <button type="submit"
                    class="inline-flex items-center justify-center rounded-lg bg-brand-500 px-5 py-2.5 text-sm font-medium text-white transition-colors hover:bg-brand-600 focus:outline-none focus:ring-2 focus:ring-brand-500/50">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Course
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

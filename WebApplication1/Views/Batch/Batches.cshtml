@model List<AMS.Models.Entities.Batch>
@{
    ViewData["Title"] = "Batches";
}

<a href="/Batch/AddBatch" class="btn btn-success">
    <button class="inline-flex items-center gap-2 px-4 py-3 text-sm font-medium text-white transition rounded-lg bg-brand-500 shadow-theme-xs hover:bg-brand-600 mb-3">
        Add New Batch
    </button>
</a>

@if (TempData["success"] != null)
{
    <div class="rounded-xl border border-success-500 bg-success-50 p-4 dark:border-success-500/30 dark:bg-success-500/15 mb-4">
        <div class="flex items-start gap-3">
            <div class="-mt-0.5 text-success-500">
                <svg class="fill-current" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">

@section Scripts {
    <!-- Print Styles for Full Page Print -->
    <style media="print">
        @@page {
            size: A4;
            margin: 10mm;
        }

        body {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }

        /* Hide non-essential elements during print */
        .no-print,
        nav,
        aside,
        header,
        footer,
        button,
        select,
        .relative[x-data] {
            display: none !important;
        }

        /* Ensure full content is visible */
        .p-4, .sm\:p-6 {
            padding: 5mm !important;
        }

        /* Remove dark mode styles for print */
        .dark\:bg-gray-800,
        .dark\:bg-gray-700,
        .dark\:bg-gray-700\/50,
        .dark\:bg-gray-700\/30 {
            background-color: white !important;
        }

        .dark\:text-white,
        .dark\:text-gray-300,
        .dark\:text-gray-400 {
            color: #1f2937 !important;
        }

        .dark\:border-gray-700,
        .dark\:border-gray-600 {
            border-color: #e5e7eb !important;
        }

        /* Ensure charts and tables don't break across pages */
        .bg-white,
        .rounded-xl,
        table {
            break-inside: avoid;
            page-break-inside: avoid;
        }

        /* Make sure all content is visible */
        .overflow-hidden,
        .overflow-x-auto,
        .overflow-y-auto {
            overflow: visible !important;
            max-height: none !important;
        }

        /* Adjust grid for print */
        .grid {
            display: block !important;
        }

            .grid > div {
                margin-bottom: 10mm;
                break-inside: avoid;
                page-break-inside: avoid;
            }

        /* Show charts properly */
        canvas {
            max-width: 100% !important;
            height: auto !important;
        }

        /* Adjust card styling for print */
        .shadow-sm,
        .shadow-md,
        .shadow-lg {
            box-shadow: none !important;
            border: 1px solid #e5e7eb !important;
        }

        /* Make sure stat cards are visible */
        .xl\:grid-cols-6 > div,
        .lg\:grid-cols-2 > div,
        .xl\:grid-cols-2 > div,
        .xl\:grid-cols-3 > div {

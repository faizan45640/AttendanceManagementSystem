@model AMS.Models.ViewModels.StudentAttendanceReportViewModel

@{
    ViewData["Title"] = "Student Attendance Report";
}

<style>
    @@media print {
        body * {
            visibility: hidden;
        }

        .print-area, .print-area * {
            visibility: visible;
        }

        .print-area {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .no-print {
            display: none !important;
        }

        .print-break {
            page-break-before: always;
        }

        @@page {
            margin: 1cm;
        }
    }
</style>

<div class="space-y-6">
    @if (TempData["error"] != null)
    {
        <div class="rounded-lg border border-red-300 bg-red-50 p-4 dark:border-red-700 dark:bg-red-900/30">
            <div class="flex items-center gap-3">
                <svg class="h-5 w-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="text-sm font-medium text-red-700 dark:text-red-400">@TempData["error"]</p>
            </div>
        </div>
    }

    <!-- Header with Title and Actions -->
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between no-print">
        <div>
            <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Student Attendance Report</h2>
            <p class="text-gray-500 dark:text-gray-400">View detailed attendance records by student.</p>
        </div>
        @if (Model.SelectedStudentId.HasValue)
        {
            <div class="flex flex-wrap gap-2">
                <a href="@Url.Action("ExportStudentReportToExcel", new { studentId = Model.SelectedStudentId, batchId = Model.SelectedBatchId, semesterId = Model.SelectedSemesterId, courseId = Model.SelectedCourseId, duration = Model.Duration })" class="inline-flex items-center gap-2 rounded-lg border border-green-300 bg-green-50 px-4 py-2 text-sm font-medium text-green-700 shadow-sm hover:bg-green-100 dark:border-green-700 dark:bg-green-900/30 dark:text-green-400 dark:hover:bg-green-900/50">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Excel
                </a>
                <a href="@Url.Action("ExportStudentReportToPdf", new { studentId = Model.SelectedStudentId, batchId = Model.SelectedBatchId, semesterId = Model.SelectedSemesterId, courseId = Model.SelectedCourseId, duration = Model.Duration })" class="inline-flex items-center gap-2 rounded-lg border border-red-300 bg-red-50 px-4 py-2 text-sm font-medium text-red-700 shadow-sm hover:bg-red-100 dark:border-red-700 dark:bg-red-900/30 dark:text-red-400 dark:hover:bg-red-900/50">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                    PDF
                </a>
            </div>
        }
    </div>

    <!-- Filter Section -->
    <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] lg:p-6 no-print">
        <form method="get" action="@Url.Action("StudentReport", "Attendance")" class="space-y-4">
            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
                <!-- Search by Roll Number -->
                <div>
                    <label for="rollNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Roll Number</label>
                    <input type="text" name="rollNumber" id="rollNumber" value="@Model.SearchRollNumber" placeholder="Enter Roll No"
                           class="mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white" />
                </div>

                <!-- Filter by Batch -->
                <div>
                    <label for="batchId" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Batch</label>
                    <select name="batchId" id="batchId" onchange="this.form.submit()"
                            class="mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white">
                        <option value="">Select Batch</option>
                        @foreach (var item in Model.BatchList)
                        {
                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                        }
                    </select>
                </div>

                <!-- Select Student (if Batch Selected) -->
                <div>
                    <label for="studentId" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Student</label>
                    <select name="studentId" id="studentId" onchange="this.form.submit()"
                            class="mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white">
                        <option value="">Select Student</option>
                        @foreach (var item in Model.StudentList)
                        {
                            <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                        }
                    </select>
                </div>

                <!-- Search Button -->
                <div class="flex items-end">
                    <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900">
                        Search
                    </button>
                </div>
            </div>

            <!-- Advanced Filters (Semester/Course) -->
            @if (Model.SelectedStudentId.HasValue)
            {
                <div class="border-t border-gray-200 pt-4 dark:border-gray-700">
                    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
                        <div>
                            <label for="semesterId" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Semester</label>
                            <select name="semesterId" id="semesterId" onchange="this.form.submit()"
                                    class="mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white">
                                <option value="">All Semesters</option>
                                @foreach (var item in Model.SemesterList)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                        </div>
                        <div>
                            <label for="courseId" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Course</label>
                            <select name="courseId" id="courseId" onchange="this.form.submit()"
                                    class="mt-1 block w-full rounded-lg border border-gray-300 bg-gray-50 px-3 py-2 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-700 dark:bg-gray-800 dark:text-white">
                                <option value="">All Courses</option>
                                @foreach (var item in Model.CourseList)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            }

            <!-- Hidden Duration Field to preserve state -->
            <input type="hidden" name="duration" value="@Model.Duration" />
        </form>
    </div>

    @if (Model.SelectedStudentId.HasValue)
    {
        <!-- Student Info Header -->
        <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                @Model.StudentName
            </h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">
                @Model.RollNumber - @Model.BatchName
            </p>
        </div>

        <!-- Summary Cards -->
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
            <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:text-blue-400">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Classes</p>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">@Model.Courses.Sum(c => c.TotalSessions)</h4>
                    </div>
                </div>
            </div>
            <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-green-50 text-green-600 dark:bg-green-900/20 dark:text-green-400">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Present</p>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">@Model.Courses.Sum(c => c.PresentSessions)</h4>
                    </div>
                </div>
            </div>
            <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-red-50 text-red-600 dark:bg-red-900/20 dark:text-red-400">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Absent</p>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">@Model.Courses.Sum(c => c.AbsentSessions)</h4>
                    </div>
                </div>
            </div>
            <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-full bg-purple-50 text-purple-600 dark:bg-purple-900/20 dark:text-purple-400">
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Attendance %</p>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">
                            @if (Model.Courses.Sum(c => c.TotalSessions) > 0)
                            {
                                @Math.Round((double)Model.Courses.Sum(c => c.PresentSessions) / Model.Courses.Sum(c => c.TotalSessions) * 100, 1)
                                <span class="text-sm font-normal text-gray-500">%</span>
                            }
                            else
                            {
                                <span>0%</span>
                            }
                        </h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course-wise Attendance -->
        <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03] overflow-hidden">
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4 dark:border-gray-800 dark:bg-gray-800/50">
                <h4 class="font-semibold text-gray-800 dark:text-white/90">
                    Course-wise Attendance
                </h4>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-500 dark:text-gray-400">
                    <thead class="bg-gray-50 text-xs uppercase text-gray-700 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">Course</th>
                            <th scope="col" class="px-6 py-3">Teacher</th>
                            <th scope="col" class="px-6 py-3 text-center">Total</th>
                            <th scope="col" class="px-6 py-3 text-center">Present</th>
                            <th scope="col" class="px-6 py-3 text-center">Absent</th>
                            <th scope="col" class="px-6 py-3 text-center">%</th>
                            <th scope="col" class="px-6 py-3 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.Courses)
                        {
                            <tr class="border-b bg-white hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-600">
                                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                    @course.CourseName
                                    <div class="text-xs text-gray-500">@course.SemesterName</div>
                                </td>
                                <td class="px-6 py-4">@course.TeacherName</td>
                                <td class="px-6 py-4 text-center">@course.TotalSessions</td>
                                <td class="px-6 py-4 text-center text-green-600 font-medium">@course.PresentSessions</td>
                                <td class="px-6 py-4 text-center text-red-600 font-medium">@course.AbsentSessions</td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex items-center justify-center gap-2">
                                        <span class="font-bold @(course.Percentage >= 75 ? "text-green-600" : course.Percentage >= 60 ? "text-yellow-600" : "text-red-600")">
                                            @Math.Round(course.Percentage, 1)%
                                        </span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <a href="@Url.Action("ExportCourseAttendanceToPdf", new { studentId = Model.SelectedStudentId, courseId = course.CourseId, semesterId = course.SemesterId })"
                                       class="inline-flex items-center gap-1 rounded-lg bg-red-50 px-3 py-1.5 text-xs font-medium text-red-700 hover:bg-red-100 dark:bg-red-900/30 dark:text-red-400 dark:hover:bg-red-900/50"
                                       title="Download date-wise attendance PDF">
                                        <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                        PDF
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Duration Filter & Legend -->
        <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03]">
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <h4 class="font-semibold text-gray-800 dark:text-white/90">Attendance History</h4>
                    <p class="text-sm text-gray-500">View class schedule and attendance status</p>
                </div>
                <div class="inline-flex rounded-lg border border-gray-200 p-1 dark:border-gray-700" role="group">
                    <a href="@Url.Action("StudentReport", new { duration = "week", studentId = Model.SelectedStudentId, batchId = Model.SelectedBatchId, semesterId = Model.SelectedSemesterId, courseId = Model.SelectedCourseId, rollNumber = Model.SearchRollNumber })"
                       class="px-4 py-2 text-sm font-medium rounded-md transition-colors @(Model.Duration == "week" || string.IsNullOrEmpty(Model.Duration) ? "bg-indigo-600 text-white" : "text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700")">
                        This Week
                    </a>
                    <a href="@Url.Action("StudentReport", new { duration = "month", studentId = Model.SelectedStudentId, batchId = Model.SelectedBatchId, semesterId = Model.SelectedSemesterId, courseId = Model.SelectedCourseId, rollNumber = Model.SearchRollNumber })"
                       class="px-4 py-2 text-sm font-medium rounded-md transition-colors @(Model.Duration == "month" ? "bg-indigo-600 text-white" : "text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700")">
                        This Month
                    </a>
                    <a href="@Url.Action("StudentReport", new { duration = "all", studentId = Model.SelectedStudentId, batchId = Model.SelectedBatchId, semesterId = Model.SelectedSemesterId, courseId = Model.SelectedCourseId, rollNumber = Model.SearchRollNumber })"
                       class="px-4 py-2 text-sm font-medium rounded-md transition-colors @(Model.Duration == "all" ? "bg-indigo-600 text-white" : "text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700")">
                        All Time
                    </a>
                </div>
            </div>

            <!-- Status Legend -->
            <div class="mt-4 flex flex-wrap gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                <span class="inline-flex items-center gap-1.5 text-xs">
                    <span class="w-2.5 h-2.5 rounded-full bg-green-500"></span>
                    <span class="text-gray-600 dark:text-gray-400">Present</span>
                </span>
                <span class="inline-flex items-center gap-1.5 text-xs">
                    <span class="w-2.5 h-2.5 rounded-full bg-red-500"></span>
                    <span class="text-gray-600 dark:text-gray-400">Absent</span>
                </span>
                <span class="inline-flex items-center gap-1.5 text-xs">
                    <span class="w-2.5 h-2.5 rounded-full bg-yellow-500"></span>
                    <span class="text-gray-600 dark:text-gray-400">Late</span>
                </span>
                <span class="inline-flex items-center gap-1.5 text-xs">
                    <span class="w-2.5 h-2.5 rounded-full bg-blue-500"></span>
                    <span class="text-gray-600 dark:text-gray-400">Today/Excused</span>
                </span>
                <span class="inline-flex items-center gap-1.5 text-xs">
                    <span class="w-2.5 h-2.5 rounded-full bg-indigo-500"></span>
                    <span class="text-gray-600 dark:text-gray-400">Upcoming</span>
                </span>
                <span class="inline-flex items-center gap-1.5 text-xs">
                    <span class="w-2.5 h-2.5 rounded-full bg-orange-500"></span>
                    <span class="text-gray-600 dark:text-gray-400">Pending (Not Marked)</span>
                </span>
            </div>
        </div>

        @if (!Model.Weeks.Any())
        {
            <div class="rounded-2xl border border-gray-200 bg-white p-8 text-center dark:border-gray-800 dark:bg-white/[0.03]">
                <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800">
                    <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h3 class="text-sm font-medium text-gray-900 dark:text-white">No schedule found</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">No active timetable or attendance records found for this period.</p>
            </div>
        }
        else
        {
            <div class="space-y-6">
                @foreach (var week in Model.Weeks)
                {
                    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03] overflow-hidden">
                        <div class="border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50 px-6 py-4 dark:border-gray-800 dark:from-indigo-900/20 dark:to-purple-900/20">
                            <h4 class="font-semibold text-gray-800 dark:text-white/90">
                                <svg class="inline-block w-5 h-5 mr-2 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                @week.WeekRange
                            </h4>
                        </div>

                        <!-- Table-based layout for cleaner view -->
                        <div class="overflow-x-auto">
                            <table class="w-full text-left text-sm">
                                <thead class="bg-gray-50 text-xs uppercase text-gray-600 dark:bg-gray-700 dark:text-gray-400">
                                    <tr>
                                        <th scope="col" class="px-4 py-3 w-32">Date</th>
                                        <th scope="col" class="px-4 py-3">Course</th>
                                        <th scope="col" class="px-4 py-3">Teacher</th>
                                        <th scope="col" class="px-4 py-3 text-center">Time</th>
                                        <th scope="col" class="px-4 py-3 text-center">Status</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                                    @foreach (var day in week.Days)
                                    {
                                        var isToday = day.Date == DateOnly.FromDateTime(DateTime.Now);
                                        var isPast = day.Date < DateOnly.FromDateTime(DateTime.Now);
                                        var isFuture = day.Date > DateOnly.FromDateTime(DateTime.Now);
                                        var dayRowCount = day.Classes.Count;
                                        var firstClass = true;

                                        @foreach (var cls in day.Classes)
                                        {
                                            <tr class="@(isToday ? "bg-blue-50/50 dark:bg-blue-900/10" : "") hover:bg-gray-50 dark:hover:bg-gray-800/50">
                                                @if (firstClass)
                                                {
                                                    <td rowspan="@dayRowCount" class="px-4 py-3 align-top border-r border-gray-100 dark:border-gray-700">
                                                        <div class="@(isToday ? "text-indigo-600 dark:text-indigo-400 font-semibold" : "text-gray-900 dark:text-white") font-medium">
                                                            @day.Date.ToString("ddd")
                                                        </div>
                                                        <div class="text-xs @(isToday ? "text-indigo-500" : "text-gray-500")">
                                                            @day.Date.ToString("MMM dd")
                                                        </div>
                                                        @if (isToday)
                                                        {
                                                            <span class="mt-1 inline-block text-[10px] font-medium text-indigo-600 bg-indigo-100 px-1.5 py-0.5 rounded dark:bg-indigo-900/30 dark:text-indigo-400">TODAY</span>
                                                        }
                                                    </td>
                                                    firstClass = false;
                                                }
                                                <td class="px-4 py-3">
                                                    <span class="font-medium text-gray-900 dark:text-white">@cls.CourseName</span>
                                                </td>
                                                <td class="px-4 py-3 text-gray-600 dark:text-gray-400">
                                                    @cls.TeacherName
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    <span class="text-xs text-gray-500 dark:text-gray-400 whitespace-nowrap">
                                                        @cls.StartTime.ToString("hh:mm tt") - @cls.EndTime.ToString("hh:mm tt")
                                                    </span>
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    <span class="inline-flex items-center gap-1 rounded-full px-2.5 py-1 text-xs font-medium @cls.StatusColor">
                                                        @if (cls.Status == "Present")
                                                        {
                                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
                                                        }
                                                        else if (cls.Status == "Absent")
                                                        {
                                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                                                        }
                                                        else if (cls.Status == "Upcoming")
                                                        {
                                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" /></svg>
                                                        }
                                                        else if (cls.Status == "Late")
                                                        {
                                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" /></svg>
                                                        }
                                                        else if (cls.Status == "Today")
                                                        {
                                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" /></svg>
                                                        }
                                                        else
                                                        {
                                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" /></svg>
                                                        }
                                                        @cls.Status
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="rounded-2xl border border-gray-200 bg-white p-12 text-center dark:border-gray-800 dark:bg-white/[0.03]">
            <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800">
                <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Select a Student</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Search by Roll Number or select from the list to view attendance.</p>
        </div>
    }
</div>
@model AMS.Models.ViewModels.EditTimetableViewModel
@{
    ViewData["Title"] = "Edit Timetable";
    // Filter out Saturday (6) and Sunday (0)
    var days = Enum.GetValues(typeof(DayOfWeek))
                   .Cast<DayOfWeek>()
                   .Where(d => d != DayOfWeek.Saturday && d != DayOfWeek.Sunday)
                   .OrderBy(d => (int)d)
                   .ToList();
}

<div class="p-4 sm:p-6">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div class="flex items-center gap-4">
                <a asp-action="Index" class="inline-flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 text-gray-600 dark:text-gray-400 transition-colors" title="Back to List">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </a>
                <div>
                    <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900 dark:text-white">Edit Timetable</h1>
                    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 flex flex-wrap items-center gap-2">
                        <span>@Model.BatchName (@Model.BatchYear)</span>
                        <span class="hidden sm:inline">•</span>
                        <span>@Model.SemesterName @Model.SemesterYear</span>
                        @if (Model.IsActive)
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">Active</span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">Inactive</span>
                        }
                    </p>
                </div>
            </div>
            <a asp-action="Details" asp-route-id="@Model.TimetableId"
               class="inline-flex items-center justify-center px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg transition-colors duration-200">
                <svg class="w-5 h-5 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <span class="hidden sm:inline">View Timetable</span>
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["success"] != null)
    {
        <div class="mb-6 rounded-lg bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 p-4" role="alert">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm font-medium text-green-800 dark:text-green-200">@TempData["success"]</span>
            </div>
        </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="mb-6 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4" role="alert">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm font-medium text-red-800 dark:text-red-200">@TempData["error"]</span>
            </div>
        </div>
    }

    <!-- Add Slot Form - Collapsible on Mobile -->
    <div class="mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
            <!-- Form Header - Clickable on mobile -->
            <button type="button" onclick="toggleAddSlotForm()" class="w-full bg-gradient-to-r from-indigo-500 to-indigo-600 px-5 py-4 flex items-center justify-between lg:cursor-default">
                <h2 class="text-lg font-semibold text-white flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add Time Slot
                </h2>
                <svg id="toggleIcon" class="w-5 h-5 text-white lg:hidden transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>

            <!-- Form Content -->
            <div id="addSlotFormContent" class="hidden lg:block">
                <form asp-action="AddSlot" class="p-5">
                    <input type="hidden" asp-for="NewSlot.TimetableId" />

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
                        <!-- Day Selection -->
                        <div>
                            <label asp-for="NewSlot.DayOfWeek" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Day</label>
                            <select asp-for="NewSlot.DayOfWeek"
                                    class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-gray-900 dark:text-white">
                                @foreach (var day in days)
                                {
                                    <option value="@((int)day)">@day</option>
                                }
                            </select>
                        </div>

                        <!-- Course Assignment -->
                        <div class="sm:col-span-2 lg:col-span-2">
                            <label asp-for="NewSlot.CourseAssignmentId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Course & Teacher</label>
                            <select asp-for="NewSlot.CourseAssignmentId" asp-items="Model.CourseAssignments"
                                    class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-gray-900 dark:text-white text-sm">
                                <option value="">Select Course</option>
                            </select>
                            <span asp-validation-for="NewSlot.CourseAssignmentId" class="mt-1 text-xs text-red-500"></span>
                        </div>

                        <!-- Start Time -->
                        <div>
                            <label asp-for="NewSlot.StartTime" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Start Time</label>
                            <input asp-for="NewSlot.StartTime" type="time"
                                   class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-gray-900 dark:text-white" />
                            <span asp-validation-for="NewSlot.StartTime" class="mt-1 text-xs text-red-500"></span>
                        </div>

                        <!-- End Time -->
                        <div>
                            <label asp-for="NewSlot.EndTime" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">End Time</label>
                            <input asp-for="NewSlot.EndTime" type="time"
                                   class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-gray-900 dark:text-white" />
                            <span asp-validation-for="NewSlot.EndTime" class="mt-1 text-xs text-red-500"></span>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="mt-4 flex justify-end">
                        <button type="submit"
                                class="inline-flex items-center justify-center px-6 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            Add Slot
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Weekly Schedule -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <!-- Table Header -->
        <div class="px-5 py-4 border-b border-gray-200 dark:border-gray-700 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Weekly Schedule</h3>
            <span class="text-sm text-gray-500 dark:text-gray-400">
                <span class="font-semibold text-indigo-600 dark:text-indigo-400">@Model.Slots.Count</span> slot(s) scheduled
            </span>
        </div>

        <!-- Mobile View: Stack days vertically -->
        <div class="lg:hidden divide-y divide-gray-200 dark:divide-gray-700">
            @foreach (var day in days)
            {
                var daySlots = Model.Slots.Where(s => s.DayOfWeek == (int)day).OrderBy(s => s.StartTime).ToList();
                <div class="p-4">
                    <div class="flex items-center justify-between mb-3">
                        <h4 class="font-semibold text-gray-900 dark:text-white">@day.ToString()</h4>
                        @if (daySlots.Any())
                        {
                            <span class="inline-flex items-center justify-center px-2 py-0.5 text-xs font-medium bg-indigo-100 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 rounded-full">
                                @daySlots.Count class(es)
                            </span>
                        }
                    </div>

                    @if (daySlots.Any())
                    {
                        <div class="space-y-2">
                            @foreach (var slot in daySlots)
                            {
                                <div class="relative flex items-start gap-3 rounded-lg border-l-4 border-indigo-500 bg-gray-50 dark:bg-gray-700/50 p-3">
                                    <div class="flex-1 min-w-0">
                                        <span class="text-xs font-bold text-indigo-600 dark:text-indigo-400">
                                            @slot.StartTime.ToString("hh:mm tt") - @slot.EndTime.ToString("hh:mm tt")
                                        </span>
                                        <div class="text-sm font-semibold text-gray-900 dark:text-white mt-1 truncate">
                                            @slot.CourseName
                                        </div>
                                        <div class="flex items-center mt-1.5 text-xs text-gray-500 dark:text-gray-400">
                                            <svg class="w-3 h-3 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                            <span class="truncate">@slot.TeacherName</span>
                                        </div>
                                    </div>
                                    <form asp-action="DeleteSlot" asp-route-id="@slot.SlotId" method="post" onsubmit="return confirm('Delete this slot?');">
                                        <button type="submit" class="flex-shrink-0 text-gray-400 hover:text-red-500 bg-white dark:bg-gray-800 rounded-full p-1.5 shadow-sm transition-colors" title="Delete Slot">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="py-4 text-center text-sm text-gray-400 dark:text-gray-500 border-2 border-dashed border-gray-200 dark:border-gray-700 rounded-lg">
                            No classes scheduled
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Desktop View: Table layout -->
        <div class="hidden lg:block overflow-x-auto">
            <table class="w-full border-collapse">
                <thead>
                    <tr class="bg-gray-50 dark:bg-gray-900/50">
                        @foreach (var day in days)
                        {
                            var daySlotCount = Model.Slots.Count(s => s.DayOfWeek == (int)day);
                            <th class="px-2 py-3 text-sm font-semibold text-gray-700 dark:text-gray-300 text-center border-r border-gray-200 dark:border-gray-700 last:border-r-0" style="width: 14.28%">
                                @day.ToString().Substring(0, 3)
                                @if (daySlotCount > 0)
                                {
                                    <span class="ml-1 inline-flex items-center justify-center w-5 h-5 text-xs font-medium bg-indigo-100 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 rounded-full">@daySlotCount</span>
                                }
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var day in days)
                        {
                            var daySlots = Model.Slots.Where(s => s.DayOfWeek == (int)day).OrderBy(s => s.StartTime).ToList();
                            <td class="p-2 align-top border-r border-gray-200 dark:border-gray-700 last:border-r-0 bg-white dark:bg-gray-800">
                                <div class="space-y-2 min-h-[200px]">
                                    @if (daySlots.Any())
                                    {
                                        @foreach (var slot in daySlots)
                                        {
                                            <div class="relative group rounded-lg border-l-4 border-indigo-500 bg-gray-50 dark:bg-gray-700/50 p-2.5 hover:shadow-md transition-shadow">
                                                <!-- Delete Button -->
                                                <form asp-action="DeleteSlot" asp-route-id="@slot.SlotId" method="post" onsubmit="return confirm('Delete this slot?');" class="absolute top-1.5 right-1.5">
                                                    <button type="submit" class="opacity-0 group-hover:opacity-100 text-gray-400 hover:text-red-500 bg-white dark:bg-gray-800 rounded-full p-1 shadow-sm transition-all" title="Delete Slot">
                                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                                        </svg>
                                                    </button>
                                                </form>

                                                <div class="pr-6">
                                                    <span class="text-xs font-bold text-indigo-600 dark:text-indigo-400 whitespace-nowrap">
                                                        @slot.StartTime.ToString("hh:mm") - @slot.EndTime.ToString("hh:mm tt")
                                                    </span>
                                                    <div class="text-xs font-semibold text-gray-900 dark:text-white mt-1 leading-tight line-clamp-2">
                                                        @slot.CourseName
                                                    </div>
                                                    <div class="flex items-center mt-1.5 text-xs text-gray-500 dark:text-gray-400">
                                                        <svg class="w-3 h-3 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                        </svg>
                                                        <span class="truncate">@slot.TeacherName</span>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="flex items-center justify-center h-[200px] border-2 border-dashed border-gray-200 dark:border-gray-700 rounded-lg">
                                            <span class="text-gray-400 dark:text-gray-600 text-xs text-center">No classes</span>
                                        </div>
                                    }
                                </div>
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function toggleAddSlotForm() {
            const content = document.getElementById('addSlotFormContent');
            const icon = document.getElementById('toggleIcon');

            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.classList.add('rotate-180');
            } else {
                content.classList.add('hidden');
                icon.classList.remove('rotate-180');
            }
        }

        // On page load, keep form open on larger screens
        if (window.innerWidth >= 1024) {
            document.getElementById('addSlotFormContent').classList.remove('hidden');
        }
    </script>
}

        <div class="text-center">
            <div class="relative flex items-center justify-center z-1 mb-4">
                <svg class="fill-error-50 dark:fill-error-500/15" width="70" height="70" viewBox="0 0 90 90" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M34.364 6.85053C38.6205 -2.28351 51.3795 -2.28351 55.636 6.85053C58.0129 11.951 63.5594 14.6722 68.9556 13.3853C78.6192 11.0807 86.5743 21.2433 82.2185 30.3287C79.7862 35.402 81.1561 41.5165 85.5082 45.0122C93.3019 51.2725 90.4628 63.9451 80.7747 66.1403C75.3648 67.3661 71.5265 72.2695 71.5572 77.9156C71.6123 88.0265 60.1169 93.6664 52.3918 87.3184C48.0781 83.7737 41.9219 83.7737 37.6082 87.3184C29.8831 93.6664 18.3877 88.0266 18.4428 77.9156C18.4735 72.2695 14.6352 67.3661 9.22531 66.1403C-0.462787 63.9451 -3.30193 51.2725 4.49185 45.0122C8.84391 41.5165 10.2138 35.402 7.78151 30.3287C3.42572 21.2433 11.3808 11.0807 21.0444 13.3853C26.4406 14.6722 31.9871 11.951 34.364 6.85053Z" fill=""></path>
                </svg>

                <span class="absolute -translate-x-1/2 -translate-y-1/2 left-1/2 top-1/2">
                    <svg class="fill-error-600 dark:fill-error-500" width="30" height="30" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.62684 11.7496C9.04105 11.1638 9.04105 10.2141 9.62684 9.6283C10.2126 9.04252 11.1624 9.04252 11.7482 9.6283L18.9985 16.8786L26.2485 9.62851C26.8343 9.04273 27.7841 9.04273 28.3699 9.62851C28.9556 10.2143 28.9556 11.164 28.3699 11.7498L21.1198 18.9999L28.3699 26.25C28.9556 26.8358 28.9556 27.7855 28.3699 28.3713C27.7841 28.9571 26.8343 28.9571 26.2485 28.3713L18.9985 21.1212L11.7482 28.3715C11.1624 28.9573 10.2126 28.9573 9.62684 28.3715C9.04105 27.7857 9.04105 26.836 9.62684 26.2502L16.8771 18.9999L9.62684 11.7496Z" fill=""></path>
                    </svg>
                </span>
            </div>

            <h4 class="mb-2 text-lg font-semibold text-gray-800 dark:text-white/90">
                Delete Semester?
            </h4>
            <p class="text-sm leading-6 text-gray-500 dark:text-gray-400">
                <span id="deleteMessage">Are you sure you want to delete this semester? This action cannot be undone.</span>
            </p>

            <form id="deleteForm" method="post" asp-action="DeleteSemester">
                @Html.AntiForgeryToken()
                <input type="hidden" id="deleteId" name="id" value="" />

                <div class="flex items-center justify-center w-full gap-2 mt-5">
                    <button type="button" onclick="closeDeleteModal()" class="flex justify-center w-full px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-700 dark:hover:bg-gray-700 transition-colors sm:w-auto">
                        Cancel
                    </button>
                    <button type="submit" class="flex justify-center w-full px-4 py-2.5 text-sm font-medium text-white rounded-lg bg-red-600 shadow-theme-xs hover:bg-red-700 sm:w-auto">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        // Handle delete form submission via AJAX
        $(document).ready(function() {
            $('#deleteForm').on('submit', function(e) {
                e.preventDefault();

                const $form = $(this);
                const $submitBtn = $form.find('button[type="submit"]');
                const originalBtnText = $submitBtn.html();

                $submitBtn.prop('disabled', true).html(`
                    <svg class="mr-2 h-4 w-4 animate-spin inline" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Deleting...
                `);

                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    success: function(response) {
                        if (response.success) {
                            closeDeleteModal();
                            showAlert('success', response.message);

                            // Reload page after short delay
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showAlert('error', response.message || 'Failed to delete semester.');
                        }
                    },
                    error: function(xhr) {
                        let errorMessage = 'An error occurred while deleting the semester.';

                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage = xhr.responseJSON.message;
                        }

                        closeDeleteModal();
                        showAlert('error', errorMessage);
                    },
                    complete: function() {
                        $submitBtn.prop('disabled', false).html(originalBtnText);
                    }
                });
            });
        });

        function showAlert(type, message) {
            const isSuccess = type === 'success';
            const alertHtml = `
                <div class="mb-4 rounded-xl border ${isSuccess ? 'border-success-500 bg-success-50 dark:border-success-500/30 dark:bg-success-500/15' : 'border-error-500 bg-error-50 dark:border-error-500/30 dark:bg-error-500/15'} p-4">
                    <div class="flex items-start gap-3">
                        <div class="-mt-0.5 ${isSuccess ? 'text-success-500' : 'text-error-500'}">
                            <svg class="fill-current" width="24" height="24" viewBox="0 0 24 24">
                                ${isSuccess ? '<path fill-rule="evenodd" clip-rule="evenodd" d="M3.70186 12.0001C3.70186 7.41711 7.41711 3.70186 12.0001 3.70186C16.5831 3.70186 20.2984 7.41711 20.2984 12.0001C20.2984 16.5831 16.5831 20.2984 12.0001 20.2984C7.41711 20.2984 3.70186 16.5831 3.70186 12.0001ZM15.6197 10.7395C15.9712 10.388 15.9712 9.81819 15.6197 9.46672C15.2683 9.11525 14.6984 9.11525 14.347 9.46672L11.1894 12.6243L9.6533 11.0883C9.30183 10.7368 8.73198 10.7368 8.38051 11.0883C8.02904 11.4397 8.02904 12.0096 8.38051 12.3611L10.553 14.5335C10.7217 14.7023 10.9507 14.7971 11.1894 14.7971C11.428 14.7971 11.657 14.7023 11.8257 14.5335L15.6197 10.7395Z"></path>' : '<path fill-rule="evenodd" clip-rule="evenodd" d="M12 3.70186C7.41711 3.70186 3.70186 7.41711 3.70186 12C3.70186 16.5829 7.41711 20.2981 12 20.2981C16.5829 20.2981 20.2981 16.5829 20.2981 12C20.2981 7.41711 16.5829 3.70186 12 3.70186ZM12 7.40186C12.4971 7.40186 12.9 7.80476 12.9 8.30186V12.6019C12.9 13.099 12.4971 13.5019 12 13.5019C11.5029 13.5019 11.1 13.099 11.1 12.6019V8.30186C11.1 7.80476 11.5029 7.40186 12 7.40186ZM12 17.1019C12.6627 17.1019 13.2 16.5646 13.2 15.9019C13.2 15.2392 12.6627 14.7019 12 14.7019C11.3373 14.7019 10.8 15.2392 10.8 15.9019C10.8 16.5646 11.3373 17.1019 12 17.1019Z"></path>'}
                            </svg>
                        </div>
                        <div>
                            <h4 class="mb-1 text-sm font-semibold text-gray-800 dark:text-white/90">${isSuccess ? 'Success' : 'Error'}</h4>
                            <p class="text-sm text-gray-500 dark:text-gray-400">${message}</p>
                        </div>
                    </div>
                </div>
            `;

            $('.overflow-hidden.rounded-2xl').first().before(alertHtml);
            $('html, body').animate({ scrollTop: 0 }, 300);

            if (isSuccess) {
                setTimeout(() => $('.mb-4.rounded-xl').first().fadeOut(300), 3000);
            }
        }

        function viewSemester(id) {
            const semester = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Semesters));
            const data = semester.find(s => s.SemesterId === id);

            if (data) {
                const startDate = new Date(data.StartDate);
                const endDate = new Date(data.EndDate);
                const formatDate = (date) => {
                    return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
                };

                document.getElementById('viewModalContent').innerHTML = `
                    <div class="space-y-3">
                        <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                            <p class="text-xs text-gray-500 dark:text-gray-400">Semester Name</p>
                            <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">${data.SemesterName}</p>
                        </div>

                        <div class="grid grid-cols-2 gap-3">
                            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Year</p>
                                <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">${data.Year}</p>
                            </div>
                            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Status</p>
                                <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">
                                    ${data.IsActive ? '● Active' : '● Inactive'}
                                </p>
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-3">
                            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Start Date</p>
                                <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">${formatDate(startDate)}</p>
                            </div>
                            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400">End Date</p>
                                <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">${formatDate(endDate)}</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-3">
                            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Duration</p>
                                <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">${Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24))} days</p>
                            </div>
                            <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400">Course Assignments</p>
                                <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">${data.CourseAssignments?.length || 0} courses</p>
                            </div>
                        </div>

                        <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-3">
                            <p class="text-xs text-gray-500 dark:text-gray-400">Total Enrollments</p>
                            <p class="mt-1 text-sm font-semibold text-gray-900 dark:text-white">${data.Enrollments?.length || 0} students</p>
                        </div>
                    </div>
                `;

                document.getElementById('viewModal').classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeViewModal() {
            document.getElementById('viewModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function confirmDelete(id) {
            const semester = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Semesters));
            const data = semester.find(s => s.SemesterId === id);

            if (data) {
                const courseCount = data.CourseAssignments?.length || 0;
                const enrollmentCount = data.Enrollments?.length || 0;
                let message = `Are you sure you want to delete "${data.SemesterName}"?`;

                if (courseCount > 0 || enrollmentCount > 0) {
                    message = `<p class="font-semibold text-red-600 dark:text-red-400">Warning: This semester has ${courseCount} course(s) and ${enrollmentCount} enrollment(s).</p>
                              <p class="mt-2">Deleting this semester will also delete all associated course assignments and enrollments. This action cannot be undone.</p>`;
                } else {
                    message = `<p>Are you sure you want to delete "${data.SemesterName}"? This action cannot be undone.</p>`;
                }

                document.getElementById('deleteMessage').innerHTML = message;
                document.getElementById('deleteId').value = id;

                document.getElementById('deleteModal').classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
    </script>
}

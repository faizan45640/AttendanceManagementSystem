@model AMS.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="mx-auto max-w-5xl">
    <!-- Header -->
    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h2 class="text-2xl font-bold text-slate-800 dark:text-white">My Profile</h2>
            <p class="mt-1 text-slate-500 dark:text-slate-400">View your account information</p>
        </div>
        <div class="flex gap-2">
            <a asp-action="ChangePassword"
               class="inline-flex items-center justify-center gap-2 rounded-lg bg-slate-100 px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-200 dark:bg-slate-700 dark:text-slate-200 dark:hover:bg-slate-600">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
                Change Password
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Institution"
                   class="inline-flex items-center justify-center gap-2 rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    Institution Settings
                </a>
            }
        </div>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="mb-6 rounded-lg bg-green-50 p-4 text-sm text-green-800 dark:bg-green-900/20 dark:text-green-400" role="alert">
            <div class="flex items-center gap-2">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                @TempData["success"]
            </div>
        </div>
    }

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
        <!-- Profile Card -->
        <div class="lg:col-span-1">
            <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
                <div class="flex flex-col items-center text-center">
                    <div class="flex h-24 w-24 items-center justify-center rounded-full bg-indigo-100 text-3xl font-bold text-indigo-600 dark:bg-indigo-900/30 dark:text-indigo-400">
                        @(string.IsNullOrWhiteSpace(Model.FullName) ? "?" : Model.FullName.Trim().Substring(0, 1).ToUpper())
                    </div>
                    <h3 class="mt-4 text-xl font-semibold text-slate-800 dark:text-white">
                        @(string.IsNullOrWhiteSpace(Model.FullName) ? "Not Set" : Model.FullName)
                    </h3>
                    <span class="mt-1 inline-flex items-center rounded-full px-3 py-1 text-xs font-medium @(Model.Role == "Admin" ? "bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400" : Model.Role == "Teacher" ? "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400" : "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400")">
                        @Model.Role
                    </span>
                </div>

                <div class="mt-6 space-y-4 border-t border-slate-200 pt-6 dark:border-slate-700">
                    <div class="flex items-center gap-3">
                        <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <div>
                            <p class="text-xs text-slate-500 dark:text-slate-400">Username</p>
                            <p class="text-sm font-medium text-slate-800 dark:text-white">@(Model.Username ?? "Not Set")</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <div>
                            <p class="text-xs text-slate-500 dark:text-slate-400">Email</p>
                            <p class="text-sm font-medium text-slate-800 dark:text-white">@(Model.Email ?? "Not Set")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Card -->
        <div class="lg:col-span-2">
            <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
                <h4 class="mb-6 text-lg font-semibold text-slate-800 dark:text-white">Account Details</h4>

                @if (Model.StudentData != null)
                {
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div class="rounded-lg bg-slate-50 p-4 dark:bg-slate-700/50">
                            <p class="text-xs font-medium uppercase text-slate-500 dark:text-slate-400">Roll Number</p>
                            <p class="mt-1 text-lg font-semibold text-slate-800 dark:text-white">@(Model.StudentData.RollNumber ?? "N/A")</p>
                        </div>
                        <div class="rounded-lg bg-slate-50 p-4 dark:bg-slate-700/50">
                            <p class="text-xs font-medium uppercase text-slate-500 dark:text-slate-400">Batch</p>
                            <p class="mt-1 text-lg font-semibold text-slate-800 dark:text-white">@(Model.StudentData.BatchName ?? "N/A")</p>
                        </div>
                        <div class="rounded-lg bg-slate-50 p-4 dark:bg-slate-700/50">
                            <p class="text-xs font-medium uppercase text-slate-500 dark:text-slate-400">Current Semester</p>
                            <p class="mt-1 text-lg font-semibold text-slate-800 dark:text-white">@(Model.StudentData.CurrentSemester ?? "N/A")</p>
                        </div>
                        <div class="rounded-lg bg-slate-50 p-4 dark:bg-slate-700/50">
                            <p class="text-xs font-medium uppercase text-slate-500 dark:text-slate-400">Enrolled Courses</p>
                            <p class="mt-1 text-lg font-semibold text-slate-800 dark:text-white">@Model.StudentData.TotalCourses</p>
                        </div>
                        <div class="rounded-lg bg-indigo-50 p-4 dark:bg-indigo-900/30 sm:col-span-2">
                            <p class="text-xs font-medium uppercase text-indigo-600 dark:text-indigo-400">Overall Attendance</p>
                            <div class="mt-2 flex items-center gap-4">
                                <p class="text-3xl font-bold text-indigo-600 dark:text-indigo-400">@Model.StudentData.OverallAttendance%</p>
                                <div class="flex-1">
                                    <div class="h-2.5 w-full rounded-full bg-indigo-200 dark:bg-indigo-900">
                                        <div class="h-2.5 rounded-full bg-indigo-600 dark:bg-indigo-400" style="width: @Model.StudentData.OverallAttendance%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.TeacherData != null)
                {
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div class="rounded-lg bg-slate-50 p-4 dark:bg-slate-700/50">
                            <p class="text-xs font-medium uppercase text-slate-500 dark:text-slate-400">Teacher ID</p>
                            <p class="mt-1 text-lg font-semibold text-slate-800 dark:text-white">#@Model.TeacherData.TeacherId</p>
                        </div>
                        <div class="rounded-lg bg-slate-50 p-4 dark:bg-slate-700/50">
                            <p class="text-xs font-medium uppercase text-slate-500 dark:text-slate-400">Active Courses</p>
                            <p class="mt-1 text-lg font-semibold text-slate-800 dark:text-white">@Model.TeacherData.TotalCourses</p>
                        </div>
                        <div class="rounded-lg bg-slate-50 p-4 dark:bg-slate-700/50">
                            <p class="text-xs font-medium uppercase text-slate-500 dark:text-slate-400">Assigned Batches</p>
                            <p class="mt-1 text-lg font-semibold text-slate-800 dark:text-white">@Model.TeacherData.TotalBatches</p>
                        </div>
                    </div>
                }
                else if (Model.AdminData != null)
                {
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                        <div class="rounded-lg bg-blue-50 p-4 dark:bg-blue-900/30">
                            <p class="text-xs font-medium uppercase text-blue-600 dark:text-blue-400">Total Students</p>
                            <p class="mt-1 text-2xl font-bold text-blue-600 dark:text-blue-400">@Model.AdminData.TotalStudents</p>
                        </div>
                        <div class="rounded-lg bg-green-50 p-4 dark:bg-green-900/30">
                            <p class="text-xs font-medium uppercase text-green-600 dark:text-green-400">Total Teachers</p>
                            <p class="mt-1 text-2xl font-bold text-green-600 dark:text-green-400">@Model.AdminData.TotalTeachers</p>
                        </div>
                        <div class="rounded-lg bg-purple-50 p-4 dark:bg-purple-900/30">
                            <p class="text-xs font-medium uppercase text-purple-600 dark:text-purple-400">Total Batches</p>
                            <p class="mt-1 text-2xl font-bold text-purple-600 dark:text-purple-400">@Model.AdminData.TotalBatches</p>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-slate-500 dark:text-slate-400">No additional details available.</p>
                }
            </div>
        </div>
    </div>
</div>

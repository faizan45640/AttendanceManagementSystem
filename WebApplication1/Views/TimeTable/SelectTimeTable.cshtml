@{
    ViewData["Title"] = "Select Timetable";
}

<div class="mx-auto max-w-md rounded-2xl border border-gray-200 bg-white p-8 text-center dark:border-gray-800 dark:bg-white/[0.03]">
    <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-indigo-50 text-indigo-500 dark:bg-indigo-500/15">
        <svg class="fill-current" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 4H5C3.89543 4 3 4.89543 3 6V20C3 21.1046 3.89543 22 5 22H19C20.1046 22 21 21.1046 21 20V6C21 4.89543 20.1046 4 19 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M16 2V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M8 2V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            <path d="M3 10H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
    </div>
    <h3 class="mb-2 text-lg font-semibold text-gray-800 dark:text-white/90">
        View Timetable
    </h3>
    <p class="mb-6 text-sm text-gray-500 dark:text-gray-400">
        Select a batch to view its timetable.
    </p>

    <form asp-action="MyTimetable" method="get">
        <div class="space-y-4">
            <div>
                <label class="mb-1.5 block text-left text-sm font-medium text-gray-700 dark:text-gray-400">
                    Select Batch (For Students)
                </label>
                <select name="batchId" asp-items="ViewBag.Batches" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-indigo-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500">
                    <option value="">Select Batch</option>
                </select>
            </div>

            <div class="relative flex items-center py-2">
                <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
                <span class="mx-4 flex-shrink-0 text-sm text-gray-400">OR</span>
                <div class="flex-grow border-t border-gray-200 dark:border-gray-700"></div>
            </div>

            <div>
                <label class="mb-1.5 block text-left text-sm font-medium text-gray-700 dark:text-gray-400">
                    Select Teacher (For Teachers)
                </label>
                <select name="teacherId" asp-items="ViewBag.Teachers" class="w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-indigo-500 focus:ring-0 dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-gray-500">
                    <option value="">Select Teacher</option>
                </select>
            </div>

            <button type="submit" class="w-full rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-medium text-white hover:bg-indigo-700 active:bg-indigo-800">
                View Timetable
            </button>
        </div>
    </form>
</div>

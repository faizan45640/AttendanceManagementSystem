@inject AMS.Services.IInstitutionService InstitutionService
@{
    var institution = await InstitutionService.GetInstitutionInfoAsync();
}
<aside :class="sidebarToggle ? 'translate-x-0 lg:w-[90px]' : '-translate-x-full'"
       class="fixed left-0 top-0 z-50 flex h-screen w-[290px] flex-col overflow-y-hidden border-r border-slate-200 bg-white px-5 dark:border-slate-800 dark:bg-slate-900 lg:static lg:translate-x-0 transition-all duration-300">
    <!-- SIDEBAR HEADER -->
    <div :class="sidebarToggle ? 'justify-center' : 'justify-between'"
         class="flex items-center gap-2 pt-8 pb-7">
        <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2">
            @if (!string.IsNullOrEmpty(institution.Logo))
            {
                <img src="@institution.Logo" alt="@institution.Name" class="h-10 w-10 rounded-lg object-contain" />
            }
            else
            {
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-600 text-white font-bold text-xl">
                    @institution.Initials
                </div>
            }
            <span class="text-xl font-bold text-slate-800 dark:text-white" :class="sidebarToggle ? 'hidden' : ''">
                @institution.Name
            </span>
        </a>
    </div>
    <!-- SIDEBAR HEADER -->

    <div class="flex flex-col overflow-y-auto duration-300 ease-linear no-scrollbar">
        <!-- Sidebar Menu -->
        <nav x-data="{ openMenu: '' }" x-init="
                // Auto-detect which menu should be open based on current URL
                const path = window.location.pathname;
                if (path.includes('/Admin/Admins') || path.includes('/Admin/AddAdmin') || path.includes('/Admin/EditAdmin')) openMenu = 'admins';
                else if (path.includes('/Student/')) openMenu = 'students';
                else if (path.includes('/Teacher/')) openMenu = 'teachers';
                else if (path.includes('/Batch/')) openMenu = 'batches';
                else if (path.includes('/Semester/')) openMenu = 'semesters';
                else if (path.includes('/Course/') || path.includes('/CourseAssignment/') || path.includes('/Enrollment/')) openMenu = 'courses';
                else if (path.includes('/Timetable/')) openMenu = 'timetable';
                else if (path.includes('/Attendance/')) openMenu = 'attendance';
                else if (path.includes('/AiAgent/')) openMenu = 'ai';
            ">
            <!-- Menu Group -->
            <div>
                <h3 class="mb-4 text-xs font-semibold uppercase text-slate-400 dark:text-slate-500">
                    <span :class="sidebarToggle ? 'lg:hidden' : ''">
                        MENU
                    </span>
                </h3>

                <ul class="flex flex-col gap-1.5 mb-6">
                    <!-- Menu Item Dashboard -->
                    <li>
                        @if (User.IsInRole("Teacher"))
                        {
                            <a asp-controller="TeacherPortal" asp-action="Dashboard"
                               class="group relative flex items-center gap-2.5 rounded-lg px-4 py-2 font-medium text-slate-600 duration-300 ease-in-out hover:bg-indigo-50 hover:text-indigo-600 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white"
                               :class="window.location.pathname.includes('TeacherPortal/Dashboard') ? 'bg-indigo-50 text-indigo-600 dark:bg-slate-800 dark:text-white' : ''">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                                </svg>
                                <span :class="sidebarToggle ? 'lg:hidden' : ''">Dashboard</span>
                            </a>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <a asp-controller="StudentPortal" asp-action="Dashboard"
                               class="group relative flex items-center gap-2.5 rounded-lg px-4 py-2 font-medium text-slate-600 duration-300 ease-in-out hover:bg-indigo-50 hover:text-indigo-600 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white"
                               :class="window.location.pathname.includes('StudentPortal/Dashboard') ? 'bg-indigo-50 text-indigo-600 dark:bg-slate-800 dark:text-white' : ''">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                                </svg>
                                <span :class="sidebarToggle ? 'lg:hidden' : ''">Dashboard</span>
                            </a>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard"
                               class="group relative flex items-center gap-2.5 rounded-lg px-4 py-2 font-medium text-slate-600 duration-300 ease-in-out hover:bg-indigo-50 hover:text-indigo-600 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white"
                               :class="window.location.pathname.includes('Admin/Dashboard') ? 'bg-indigo-50 text-indigo-600 dark:bg-slate-800 dark:text-white' : ''">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                                </svg>
                                <span :class="sidebarToggle ? 'lg:hidden' : ''">Dashboard</span>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index"
                               class="group relative flex items-center gap-2.5 rounded-lg px-4 py-2 font-medium text-slate-600 duration-300 ease-in-out hover:bg-indigo-50 hover:text-indigo-600 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white"
                               :class="window.location.pathname === '/' ? 'bg-indigo-50 text-indigo-600 dark:bg-slate-800 dark:text-white' : ''">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                                </svg>
                                <span :class="sidebarToggle ? 'lg:hidden' : ''">Dashboard</span>
                            </a>
                        }
                    </li>

                    <!-- Menu Item My Courses -->
                    @if (User.IsInRole("Teacher") || User.IsInRole("Student"))
                    {
                        <li>
                            <a asp-controller="@(User.IsInRole("Teacher") ? "TeacherPortal" : "StudentPortal")" asp-action="MyCourses"
                               class="group relative flex items-center gap-2.5 rounded-lg px-4 py-2 font-medium text-slate-600 duration-300 ease-in-out hover:bg-indigo-50 hover:text-indigo-600 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white"
                               :class="window.location.pathname.includes('MyCourses') ? 'bg-indigo-50 text-indigo-600 dark:bg-slate-800 dark:text-white' : ''">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                </svg>
                                <span :class="sidebarToggle ? 'lg:hidden' : ''">My Courses</span>
                            </a>
                        </li>
                    }

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li>
                            <a asp-controller="AiAgent" asp-action="Chat"
                               class="group relative flex items-center gap-2.5 rounded-lg px-4 py-2 font-medium text-slate-600 duration-300 ease-in-out hover:bg-indigo-50 hover:text-indigo-600 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white"
                               :class="window.location.pathname.includes('/AiAgent/Chat') ? 'bg-indigo-50 text-indigo-600 dark:bg-slate-800 dark:text-white' : ''">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8a10.2 10.2 0 01-4.39-.96L3 20l1.5-3.77A7.56 7.56 0 013 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                                <span :class="sidebarToggle ? 'lg:hidden' : ''">AI Chat</span>
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <!-- Menu Item Admins -->
                        <li>
                            <a href="#" @@click.prevent="openMenu = openMenu === 'admins' ? '' : 'admins'"
                               class="group relative flex items-center gap-2.5 rounded-lg px-4 py-2 font-medium text-slate-600 duration-300 ease-in-out hover:bg-indigo-50 hover:text-indigo-600 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white"

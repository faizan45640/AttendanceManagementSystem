@model AMS.Models.ViewModels.TimetableFilterViewModel
@{
    ViewData["Title"] = "Timetables";
}

<div class="p-4 sm:p-6">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div>
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">Timetables</h1>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Manage class schedules for batches and semesters</p>
            </div>
            <div class="flex flex-wrap items-center gap-2">
                <!-- Export Buttons -->
                <button type="button" onclick="exportToExcel()" class="inline-flex items-center justify-center rounded-lg border border-green-600 bg-green-50 px-3 py-2 text-sm font-medium text-green-700 transition-colors hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-500/50 dark:border-green-500 dark:bg-green-900/20 dark:text-green-400 dark:hover:bg-green-900/40">
                    <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Excel
                </button>
                <button type="button" onclick="exportToPDF()" class="inline-flex items-center justify-center rounded-lg border border-red-600 bg-red-50 px-3 py-2 text-sm font-medium text-red-700 transition-colors hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-500/50 dark:border-red-500 dark:bg-red-900/20 dark:text-red-400 dark:hover:bg-red-900/40">
                    <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>
                    PDF
                </button>
                <a asp-action="Create"
                   class="inline-flex items-center justify-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add Timetable
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 mb-6">
        <div class="p-4 sm:p-6">
            <form method="get" asp-action="Index">
                <input type="hidden" name="Page" value="1" />
                <input type="hidden" name="PageSize" value="@Model.PageSize" />
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    <!-- Semester Filter -->
                    <div>
                        <label asp-for="SemesterId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Semester</label>
                        <select asp-for="SemesterId" asp-items="ViewBag.Semesters"
                                class="w-full px-4 py-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-gray-900 dark:text-white">
                            <option value="">All Semesters</option>
                        </select>
                    </div>

                    <!-- Batch Filter -->
                    <div>
                        <label asp-for="BatchId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Batch</label>
                        <select asp-for="BatchId" asp-items="ViewBag.Batches"
                                class="w-full px-4 py-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-gray-900 dark:text-white">
                            <option value="">All Batches</option>
                        </select>
                    </div>

                    <!-- Status Filter -->
                    <div>
                        <label asp-for="Status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Status</label>
                        <select asp-for="Status"
                                class="w-full px-4 py-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-gray-900 dark:text-white">
                            <option value="">All Statuses</option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>

                    <!-- Filter Buttons -->
                    <div class="flex items-end gap-2">
                        <button type="submit"
                                class="flex-1 inline-flex items-center justify-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                            </svg>
                            Filter
                        </button>
                        <a href="@Url.Action("Index")"
                           class="inline-flex items-center justify-center px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg transition-colors duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Count -->
    @if (Model.Timetables.Any())
    {
        <div class="mb-4">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Showing <span class="font-semibold text-gray-900 dark:text-white">@Model.Timetables.Count</span> of <span class="font-semibold text-gray-900 dark:text-white">@Model.TotalCount</span> timetable(s)
            </p>
        </div>
    }

    <!-- Timetables Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @if (Model.Timetables.Any())
        {
            @foreach (var item in Model.Timetables)
            {
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-md transition-shadow duration-200">
                    <!-- Card Header -->
                    <div class="bg-gradient-to-r from-indigo-500 to-indigo-600 px-5 py-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-lg font-semibold text-white">@item.Batch?.BatchName (@item.Batch?.Year)</h3>
                                <p class="text-indigo-100 text-sm mt-0.5">@item.Semester?.SemesterName @item.Semester?.Year</p>
                            </div>
                            @if (item.IsActive == true)
                            {
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <svg class="w-2 h-2 mr-1" fill="currentColor" viewBox="0 0 8 8">
                                        <circle cx="4" cy="4" r="3"></circle>
                                    </svg>
                                    Active
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    <svg class="w-2 h-2 mr-1" fill="currentColor" viewBox="0 0 8 8">
                                        <circle cx="4" cy="4" r="3"></circle>
                                    </svg>
                                    Inactive
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="p-5">
                        <div class="flex items-center text-gray-600 dark:text-gray-400 text-sm mb-4">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span>@item.Semester?.StartDate.ToString("MMM dd") - @item.Semester?.EndDate.ToString("MMM dd, yyyy")</span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex items-center gap-2">
                            <a asp-action="Details" asp-route-id="@item.TimetableId"
                               class="flex-1 inline-flex items-center justify-center px-3 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-sm font-medium rounded-lg transition-colors"
                               title="View Timetable">
                                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                View
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.TimetableId"
                               class="flex-1 inline-flex items-center justify-center px-3 py-2 bg-indigo-100 hover:bg-indigo-200 dark:bg-indigo-900/30 dark:hover:bg-indigo-900/50 text-indigo-700 dark:text-indigo-400 text-sm font-medium rounded-lg transition-colors"
                               title="Edit Timetable">
                                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Edit
                            </a>
                            <button onclick="openDeleteModal(@item.TimetableId, '@item.Batch?.BatchName (@item.Batch?.Year)', '@item.Semester?.SemesterName @item.Semester?.Year')"
                                    class="inline-flex items-center justify-center px-3 py-2 bg-red-100 hover:bg-red-200 dark:bg-red-900/30 dark:hover:bg-red-900/50 text-red-700 dark:text-red-400 text-sm font-medium rounded-lg transition-colors"
                                    title="Delete Timetable">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="col-span-full">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 text-center py-12 px-4">
                    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No timetables found</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new timetable.</p>
                    <div class="mt-6">
                        <a asp-action="Create"
                           class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            Add Timetable
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @await Html.PartialAsync("_Pagination", new AMS.Models.ViewModels.PaginationUiViewModel
    {
        Action = "Index",
        Controller = "Timetable",
        Page = Model.Page,
        PageSize = Model.PageSize,
        TotalCount = Model.TotalCount,
        PageSizeOptions = Model.PageSizeOptions,
        RouteValues = new Dictionary<string, string?>
        {
            ["SemesterId"] = Model.SemesterId?.ToString(),
            ["BatchId"] = Model.BatchId?.ToString(),
            ["Status"] = Model.Status,
            ["PageSize"] = Model.PageSize.ToString(),
        }
    })
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="fixed inset-0 bg-gray-500 dark:bg-gray-900 bg-opacity-75 dark:bg-opacity-75 transition-opacity" onclick="closeDeleteModal()"></div>

    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full p-5 sm:p-6">
            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-red-100 dark:bg-red-900/30 rounded-full">
                <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>

            <div class="mt-4 text-center">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Delete Timetable</h3>
                <div class="mt-2">
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        Are you sure you want to delete the timetable for <strong id="deleteBatchName" class="text-gray-900 dark:text-white"></strong> - <strong id="deleteSemesterName" class="text-gray-900 dark:text-white"></strong>?
                    </p>
                    <p class="text-sm text-red-600 dark:text-red-400 mt-2">
                        This will also delete all associated time slots. This action cannot be undone.
                    </p>
                </div>
            </div>

            <form id="deleteForm" method="post" class="mt-6 flex flex-col sm:flex-row-reverse gap-3">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors duration-200">
                    Delete
                </button>
                <button type="button" onclick="closeDeleteModal()"
                        class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg transition-colors duration-200">
                    Cancel
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openDeleteModal(timetableId, batchName, semesterName) {
            document.getElementById('deleteBatchName').textContent = batchName;
            document.getElementById('deleteSemesterName').textContent = semesterName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + timetableId;
            document.getElementById('deleteModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeDeleteModal();
            }
        });

        // Export Functions
        function getFilterParams() {
            const semesterId = document.querySelector('[name="SemesterId"]')?.value || '';
            const batchId = document.querySelector('[name="BatchId"]')?.value || '';
            const status = document.querySelector('[name="Status"]')?.value || '';

            let params = [];
            if (semesterId) params.push('semesterId=' + semesterId);
            if (batchId) params.push('batchId=' + batchId);
            if (status) params.push('status=' + encodeURIComponent(status));

            return params.length > 0 ? '?' + params.join('&') : '';
        }

        function exportToExcel() {
            const params = getFilterParams();
            window.location.href = '@Url.Action("ExportToExcel", "Timetable")' + params;
        }

        function exportToPDF() {
            const params = getFilterParams();
            window.location.href = '@Url.Action("ExportToPdf", "Timetable")' + params;
        }
    </script>
}
